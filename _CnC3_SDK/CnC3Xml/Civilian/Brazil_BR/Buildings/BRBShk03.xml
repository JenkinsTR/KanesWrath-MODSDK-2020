            Prev = CurDrawablePrevAnimationState();
            if Prev ~= null and Prev ~= "STATE_Rubble" and Prev ~= "TRANS_IntoRubble" then
            CurDrawableSetTransitionAnimState("TRANS_IntoRubble")
            end
          </Script>
				</AnimationState>
				<AnimationState
