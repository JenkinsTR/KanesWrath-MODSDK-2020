<?xml version="1.0" encoding="utf-8"?>
<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xai="uri:ea.com:eala:asset:instance">
	<Tags></Tags>
	<Includes>
		<Include
			type="all"
			source="ART:AUWall.w3x" />
		<!-- Base Object -->
		<Include
			type="instance"
			source="DATA:BaseObjects/BaseStructure.xml" />
	</Includes>
	<GameObject
		id="AlienWallSegment"
		inheritFrom="BaseStructure"
		Side="ALIEN"
		EditorSorting="STRUCTURE"
		BuildCost="100"
		BuildTime="1"
		SelectPortrait="Portrait_AlienWallSegment"
		ButtonImage="Portrait_AlienWallSegment"
		EnergyProduction="0"
		KindOf="PRELOAD STRUCTURE SELECTABLE IMMOBILE SCORE WALL_SEGMENT NOT_AUTOACQUIRABLE AUTO_ACQUIRABLE_BY_AI COVER IGNORE_FOR_VICTORY CAN_CAST_REFLECTIONS RESIST_EMP"
		RadarPriority="STRUCTURE"
		PlacementViewAngle="225d"
		BuildCompletion="PLACED_BY_PLAYER"
		ProductionQueueType="MAIN_STRUCTURE"
		BuildPlacementTypeFlag="MAIN_STRUCTURE"
		EditorName="AlienWallSegment"
		Description="Desc:AlienWallSegment">
		<DisplayName
			xai:joinAction="Replace">Name:AlienWallSegment</DisplayName>
		<ArmorSet
			Armor="AlienWallArmor"
			DamageFX="FactionStructureDamageFX" />
		<SkirmishAIInformation
			BaseBuildingLocation="FRONT" />
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true"
				UseStandardModelNames="true"
				StaticModelLODMode="true">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="AUWall" />
				</ModelConditionState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<GettingBuilt
				id="ModuleTag_04"
				UseSpawnTimerWithoutWorker="true">
				<PercentOfBuildCostToRebuildInfo></PercentOfBuildCostToRebuildInfo>
				<SelfAudio></SelfAudio>
			</GettingBuilt>
			<SlowDeath
				id="ModuleTag_Death"
				SinkDelay="3.0s"
				SinkRate="4.0"
				DestructionDelay="8.0s">
				<Sound Type="INITIAL" List="ALI_Building_Die" />
				<DieMuxData
					DeathTypes="ALL" />
			</SlowDeath>
			<StructureUnpackUpdate
				UnpackTime="1.5s" />
			<xi:include
				href="DATA:Includes/GenericAlienBuildingDestructionNoSpawn.xml" />
			<xi:include
				href="DATA:Includes/GenericAlienBuildingSuicideNoSpawn.xml" />
		</Behaviors>
		<Body>
			<ActiveBody
				id="ModuleTag_05"
				MaxHealth="1500" />
		</Body>
		<Geometry>
			<Shape
				Type="BOX"
				Name="Geom_Orig"
				MajorRadius="5.0"
				MinorRadius="10.0"
				Height="20.0">
				<Offset
					x="0.0"
					y="0.0"
					z="0.0" />
			</Shape>
		</Geometry>
		<AudioArraySound xai:joinAction="Remove" >
			<AudioEntry Sound="ALI_Building_LightDamage" AudioType="soundOnDamaged" />
			<AudioEntry Sound="ALI_Building_HeavyDamage" AudioType="soundOnReallyDamaged" />
		</AudioArraySound>
		<ShadowInfo
			Type="VOLUME" />
		<VisionInfo
			VisionRange="160"
			ShroudClearingRange="100" />
	</GameObject>
</AssetDeclaration>