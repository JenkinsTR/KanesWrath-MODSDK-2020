<?xml version="1.0" encoding="us-ascii"?>
<AssetDeclaration xmlns="uri:ea.com:eala:asset">
	<Tags />
	<Includes />

	<InGameUISettings
		id="InGameUISettings"
		ObjectivesButtonFlashDuration="30s"
		IntelligenceDatabaseButtonFlashDuration="15s">

		<CommandButton>
			<FactionSettings
				Faction="GDI"
				LockedImage="Button_Locked_GDI">
				<ImageTintColor R="110" G="231" B="255"/>
			</FactionSettings>
			<FactionSettings
				Faction="NOD"
				LockedImage="Button_Locked_NOD">
				<ImageTintColor R="255" G="97" B="96"/>
			</FactionSettings>
			<FactionSettings
				Faction="Alien"
				LockedImage="Button_Locked_Alien">
				<ImageTintColor R="161" G="153" B="255"/>
			</FactionSettings>
		</CommandButton>

		<AttackMoveMarkerColor R="1.0" G="0.0" B="0.0"/>

		<DecalCloud
			BuildTexture="DecalCloudSegment"
			DefenseTexture="DecalDefenseCloudSegment"
			SpecialPowerRestrictionTexture="DecalRestrictionSegment"
			/>

		<DrawableCaption>
			<Font Name="RussellSquare" Size="12"/>
			<Color R="1.0" G="1.0" B="1.0"/>
		</DrawableCaption>

		<ExitContainerButton
			HelpTitleFormat="NAME:ExitContainer"
			HelpDescription="DESC:ExitContainer"/>

		<FixedButtonHelp>
			<AggressiveStance
				Title="NAME:AggresiveStance"
				Description="DESC:AggresiveStance"/>
			<AircraftTab
				Title="NAME:AircraftSubTab"
				Description="DESC:AircraftSubTab"/>
			<AircraftTypeTab
				Title="NAME:AircraftTab"
				Description="DESC:AircraftTab"/>
			<AttackMove
				Title="NAME:AttackMove"
				Description="DESC:AttackMove"/>
			<ForceAttack
				Title="NAME:ForceAttack"
				Description="DESC:ForceAttack"/>
			<ForceMove
				Title="NAME:ForceMove"
				Description="DESC:ForceMove"/>
			<GuardStance
				Title="NAME:GuardStance"
				Description="DESC:GuardStance"/>
			<HoldGroundStance
				Title="NAME:HoldGroundStance"
				Description="DESC:HoldGroundStance"/>
			<HoldFireStance
				Title="NAME:HoldFireStance"
				Description="DESC:HoldFireStance"/>
			<InfantryTab
				Title="NAME:InfantrySubTab"
				Description="DESC:InfantrySubTab"/>
			<InfantryTypeTab
				Title="NAME:InfantryTab"
				Description="DESC:InfantryTab"/>
			<IntelligenceDatabase
				Title="NAME:IntelligenceDatabase"
				Description="DESC:IntelligenceDatabase"/>
			<MainStructureTab
				Title="NAME:ProductionStructureSubTab"
				Description="DESC:ProductionStructureSubTab"/>
			<MainStructureTypeTab
				Title="NAME:ProductionStructureTab"
				Description="DESC:ProductionStructureTab"/>
			<Messenger
				Title="NAME:Messenger"
				Description="DESC:Messenger"/>
			<Objectives
				Title="NAME:Objectives"
				Description="DESC:Objectives"/>
			<OtherStructureTab
				Title="NAME:SupportStructureSubTab"
				Description="DESC:SupportStructureSubTab"/>
			<OtherStructureTypeTab
				Title="NAME:SupportStructureTab"
				Description="DESC:SupportStructureTab"/>
			<PlanningMode
				Title="NAME:PlanningMode"
				Description="DESC:PlanningMode"/>
			<PlayerStatus
				Title="NAME:PlayerStatus"
				Description="DESC:PlayerStatus"/>
			<ReplayFastForward
				Title="NAME:ReplayFastForward"
				Description="DESC:ReplayFastForward"/>
			<ReverseMove
				Title="NAME:ReverseMove"
				Description="DESC:ReverseMove"/>
			<SelectionRefinementTab
				Title="NAME:ContextualTab"
				Description="DESC:ContextualTab"/>
			<SellMode
				Title="NAME:SellMode"
				Description="DESC:SellMode"/>
			<Stop
				Title="NAME:Stop"
				Description="DESC:Stop"/>
			<TogglePowerMode
				Title="NAME:PowerMode"
				Description="DESC:PowerMode"/>
			<ToggleRepairMode
				Title="NAME:RepairMode"
				Description="DESC:RepairMode"/>
			<VehicleTab
				Title="NAME:VehicleSubTab"
				Description="DESC:VehicleSubTab"/>
			<VehicleTypeTab
				Title="NAME:VehicleTab"
				Description="DESC:VehicleTab"/>
			<VoiceChatMode
				Title="NAME:VoiceChatMode"
				Description="DESC:VoiceChatMode"/>
			<VoiceChatTalk
				Title="NAME:VoiceChatTalk"
				Description="DESC:VoiceChatModeSpecific"/>
			<WaypointMode
				Title="NAME:WaypointMode"
				Description="DESC:WaypointMode"/>
		</FixedButtonHelp>

		<FloatingText
			TimeOut="1000ms"
			MoveUpSpeed="30" 
			MoveVanishRate="3">
			<Font Name="RussellSquare" Size="18" Bold="true"/>
		</FloatingText>

		<Message
			Delay="75000ms">
			<Color1 R="1.0" G="1.0" B="1.0"/>
			<Color2 R="0.384" G="0.75" B="1.0"/>
			<Font Name="RussellSquare" Size="12"/>
		</Message>

		<MilitaryCaption
			Centered="false"
			Delay="16ms">
			<Color R="0.357" G="1.0" B="0.855"/>
			<Position x="0" y="0"/>
			<TitleFont Name="RussellSquare" Size="16"/>
			<Font Name="RussellSquare" Size="16"/>
		</MilitaryCaption>

		<MoveMarkerColor R="1.0" G="1.0" B="1.0"/>

		<ObjectivePresentation
			DefaultTimePerTarget="7s"
			DefaultCameraStartAngle="25d"
			DefaultCameraEndAngle="-25d"
			DefaultCameraFieldOfView="35d"
			StartObjectiveSound="TEMP_SatelliteViewBegin"
			SatelliteViewFinishSound="TEMP_SatelliteViewEnd"
			SatelliteViewAmbientLoop="TEMP_SatelliteViewAmbientLoop" >
			<Zoom
				InitialChangePerSecond="1.8"
				Overshoot="15"
				ChangePerSecond="0.4"
				InitialFOV="100"
				MidPointFOV="70"
				MinimumFOV="50"
				MidPointOfs="5"
				ZoomCount="3"
				DurationMin="1s"
				DurationMax="3s"
				ZoomOutSound="TEMP_SatelliteViewZoomOut" 
				ZoomInSound="TEMP_SatelliteViewZoomIn"
				MinFOVChangeForZoomOutSound="110%"
				MaxFOVChangeForZoomInSound="90%" 
				/>
			<Move
				Acceleration="150.0"
				MaxSpeed="500.0"
				JitterXY="3.0"
				JitterZ="1.0"
				MinHardCutDistance="500.0"
				HardCutSound="TEMP_SatelliteViewBegin"
				MoveSound="TEMP_SatelliteViewPan"
				/>
		</ObjectivePresentation>

		<Subtitle
			HoldTime="20s"
			LineCount="8">
			<Font Name="RussellSquare" Size="12"/>
			<PanelColor R="0" G="0" B="0" A="128"/>
			<TextColor R="255" G="204" B="0"/>
			<Position x="0.6" y="0.255"/>
			<Size x="0.35" y="0.0"/> <!-- y component of size doesn't really do anything. That is controlled by LineCount. -->
		</Subtitle>

		<Timer
			FlashDuration="500ms">
			<Position x="0" y="0"/>
			<FlashColor R="1.0" G="0.99" B="0.33"/>
			<NormalFont Name="RussellSquare" Size="16"/>
			<NormalColor R="1.0" G="0.99" B="0.33"/>
			<ReadyFont Name="RussellSquare" Size="16"/>
			<ReadyColor R="1.0" G="0.99" B="0.33"/>
		</Timer>

	</InGameUISettings>
</AssetDeclaration>
