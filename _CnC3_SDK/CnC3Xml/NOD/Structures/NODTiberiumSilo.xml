		CommandSet="NODTiberiumSiloCommandSet"
		KindOf="STRUCTURE SELECTABLE IMMOBILE CAN_CAST_REFLECTIONS FS_MONEY_STORAGE IGNORE_FOR_VICTORY NOT_AUTOACQUIRABLE AUTO_ACQUIRABLE_BY_AI COVER"
