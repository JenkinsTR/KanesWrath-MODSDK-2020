<?xml version="1.0" encoding="us-ascii"?>
<AssetDeclaration xmlns="uri:ea.com:eala:asset">

	<!-- The standard PC mouse setup -->
	<Mouse id="StandardMouse">
		<TooltipFontName>Albertus MT</TooltipFontName>
		<TooltipFontSize>10</TooltipFontSize>
		<TooltipFontIsBold>false</TooltipFontIsBold>
		<TooltipDelayTime>800</TooltipDelayTime>
		<TooltipTextColor R="220" G="220" B="220" A="255" />
		<UseTooltipAltTextColor>false</UseTooltipAltTextColor>
		<AdjustTooltipAltColor>true</AdjustTooltipAltColor>
		<OrthoCamera>true</OrthoCamera>
		<OrthoZoom>0.5</OrthoZoom>
		<DragTolerance>30</DragTolerance>
	</Mouse>

</AssetDeclaration>