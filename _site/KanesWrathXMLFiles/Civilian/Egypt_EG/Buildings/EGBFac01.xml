	<Includes>
		<Include
			type="all"
			source="ART:EGBFac01.w3x" />
		<Include
			type="all"
			source="ART:EGBFac01_D1.w3x" />
		<Include
			type="all"
			source="ART:EGBFac01_D2.w3x" />
		<Include
			type="all"
			source="ART:EGBFac01_D3.w3x" />
		<Include
			type="instance"
			source="DATA:BaseObjects/BaseCivilianStructure.xml" />
	</Includes>
	<GameObject
		id="Egyptian_Factory_01"
		inheritFrom="BaseCivilianStructure"
		EditorName="Egyptian_Factory_01"
        EditorSorting="STRUCTURE"
		Browser="REGION Egypt_EG STRUCTURE">
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="false"
				AffectedByStealth="false"
				ExtraPublicBone="BONEGARRISON01 BONEGARRISON02 BONEGARRISON03 BONEGARRISON04 BONEGARRISON05 BONEGARRISON06 BONEGARRISON07 BONEGARRISON08 BONEGARRISON09 BONEGARRISON10 BONEGARRISON11 BONEGARRISON12">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="EGBFac01" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="RUBBLE">
					<Model
						Name="EGBFac01_D3" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="REALLYDAMAGED">
					<Model
						Name="EGBFac01_D2" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DAMAGED">
					<Model
						Name="EGBFac01" />
					<Texture
						Original="EGBFac01"
						New="EGBFac01_D1" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT">
					<!-- no anim -->
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="RUBBLE"
					StateName="STATE_Rubble"
					Flags="START_FRAME_LAST">
					<Animation
						AnimationName="EGBFac01_D3"
						AnimationMode="MANUAL" />
					<Script>
            Prev = CurDrawablePrevAnimationState();
            if Prev ~= null and Prev ~= "STATE_Rubble" and Prev ~= "TRANS_IntoRubble" then
            CurDrawableSetTransitionAnimState("TRANS_IntoRubble")
            end
          </Script>
        </AnimationState>
        <AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="REALLYDAMAGED"
					StateName="STATE_ReallyDamaged"
					Flags="START_FRAME_LAST">
          <Animation
						AnimationName="EGBFac01_D2"
						AnimationMode="MANUAL" />
          <Script>
            Prev = CurDrawablePrevAnimationState();
            if Prev ~= null and Prev ~= "STATE_ReallyDamaged" and Prev ~= "TRANS_IntoReallyDamaged" then
            CurDrawableSetTransitionAnimState("TRANS_IntoReallyDamaged")
            end
          </Script>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_IntoReallyDamaged">
					<Animation
						AnimationName="EGBFac01_D2"
						AnimationMode="ONCE"
						AnimationBlendTime="0" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_IntoRubble">
					<Animation
						AnimationName="EGBFac01_D3"
						AnimationMode="ONCE"
						AnimationBlendTime="0" />
					<ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="CivBuildingDust"
						FollowBone="false" />
					<ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="CivBuildingDust02"
						FollowBone="false" />
				</AnimationState>
			</ScriptedModelDraw>
			<xi:include
				href="../../../Includes/GarrisonFlagArmorDraw.xml"
				xpointer="xmlns(n=uri:ea.com:eala:asset) xpointer(/n:CommonArmorDraws/child::*)" />
		</Draws>
		<Behaviors>
			<FXListBehavior
				id="ModuleTag_FXList"
				xai:joinAction="Replace" xmlns:xai="uri:ea.com:eala:asset:instance">
				<DieMuxData
					DeathTypes="ALL" />
				<Event
					Index="onTransitionToDamaged"
					FX="FX_BuildDamaged_Large" />
				<Event
					Index="onTransitionToReallyDamaged"
					FX="FX_BuildDamaged_Large" />
				<Event
					Index="onTransitionToRubble"
					FX="FX_BuildRubble_Large" />
				<Event
					Index="onDeath"
					FX="FX_ScorchLarge" />
			</FXListBehavior>
		</Behaviors>
		<Body>
			<ActiveBody
				id="ModuleTag_Body"
				MaxHealth="=$CIV_HEALTH_MEDIUM" />
		</Body>
		<Geometry
			IsSmall="false">
			<Shape
				Type="BOX"
				MajorRadius="26.3064"
				MinorRadius="85.4958"
				Height="74.9732"
				ContactPointGeneration="STRUCTURE">
				<Offset
					x="3.03594"
					y="-10.2386"
					z="0.0" />
			</Shape>
			<Shape
				Type="BOX"
				MajorRadius="43.0767"
				MinorRadius="103.581"
				Height="66.4237"
				ContactPointGeneration="STRUCTURE">
				<Offset
					x="2.70711"
					y="-2.01784"
					z="0.0" />
			</Shape>
		</Geometry>
	</GameObject>
</AssetDeclaration>