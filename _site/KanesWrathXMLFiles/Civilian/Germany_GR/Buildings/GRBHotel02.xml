				<AnimationState
					ParseCondStateType="PARSE_DEFAULT">
					<!-- no anim -->
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="RUBBLE"
					StateName="STATE_Rubble"
					Flags="START_FRAME_LAST">
					<Animation
						AnimationName="GRBHotel02_D3"
						AnimationMode="MANUAL" />
					<Script>
            Prev = CurDrawablePrevAnimationState();
            if Prev ~= null and Prev ~= "STATE_Rubble" and Prev ~= "TRANS_IntoRubble" then
            CurDrawableSetTransitionAnimState("TRANS_IntoRubble")
            end
          </Script>
				</AnimationState>				
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="REALLYDAMAGED"
					StateName="STATE_ReallyDamaged"
					Flags="START_FRAME_LAST">
					<Animation
						AnimationName="GRBHotel02_D2"
						AnimationMode="MANUAL" />
					<Script>
            Prev = CurDrawablePrevAnimationState();
            if Prev ~= null and Prev ~= "STATE_ReallyDamaged" and Prev ~= "TRANS_IntoReallyDamaged" then
            CurDrawableSetTransitionAnimState("TRANS_IntoReallyDamaged")
            end
          </Script>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DAMAGED"
					StateName="STATE_Damaged"
					Flags="START_FRAME_LAST">
					<Animation
						AnimationName="GRBHotel02_D1"
						AnimationMode="MANUAL" />
					<Script>
            Prev = CurDrawablePrevAnimationState();
            if Prev ~= null and Prev ~= "STATE_Damaged" and Prev ~= "TRANS_IntoDamaged" then
            CurDrawableSetTransitionAnimState("TRANS_IntoDamaged")
            end
          </Script>
				</AnimationState>
				<!-- TRANSITIONS -->
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_IntoDamaged">
					<Animation
						AnimationName="GRBHotel02_D1"
						AnimationMode="ONCE"
						AnimationBlendTime="0"/>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_IntoReallyDamaged">
					<Animation
						AnimationName="GRBHotel02_D2"
						AnimationMode="ONCE"
						AnimationBlendTime="0"/>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_IntoRubble">
					<Animation
						AnimationName="GRBHotel02_D3"
						AnimationMode="ONCE"
						AnimationBlendTime="0"/>
					<ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="CivBuildingDust"
						FollowBone="false" />
					<ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="CivBuildingDust02"
						FollowBone="false" />
				</AnimationState>
