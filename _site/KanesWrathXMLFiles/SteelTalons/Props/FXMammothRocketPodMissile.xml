<?xml version="1.0" encoding="us-ascii"?>
<!-- The default rocket pod projectile -->
<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xai="uri:ea.com:eala:asset:instance">
	<Tags></Tags>
	<Includes>
		<Include
			type="all"
			source="ART:FX_RPG.w3x" />
		<Include
			type="all"
			source="ART:FX_RPGHeroic.w3x" />			
	</Includes>
	<GameObject
		id="FXMammothRocketPodMissile"
		Side="GDI"
		EditorSorting="SYSTEM"
		KindOf="PROJECTILE SMALL_MISSILE NO_COLLIDE HIDE_IF_FOGGED"
		EditorName="FXMammothRocketPodMissile">
		<ArmorSet
			Armor="NoArmor" />
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_ScriptedModelDraw">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="FX_RPG" />
					<ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="OrcaMissileTrail"
						FollowBone="true" />
				</ModelConditionState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<FXListBehavior
				id="ModuleTag_FXLists">
				<DieMuxData
					DeathTypes="ALL" />
				<Event
					Index="onDeath"
					FX="FX_GDI_MissileSoldier_MissileImpactExplosion" />
			</FXListBehavior>
			<DestroyDie
				id="ModuleTag_Die">
				<DieMuxData
					DeathTypes="ALL" />
			</DestroyDie>
			<BezierProjectile
				id="ModuleTag_BezierProjectileBehavior"
				FirstHeightMin="60"
				FirstHeightMax="60"
				SecondHeightMin="60"
				SecondHeightMax="60"
				FirstPercentIndent="30"
				SecondPercentIndent="90"
				GroundHitFX="FX_GDIMissleMiss"
				MaxDistanceReachedFX="FX_GDIMissleSmallHit"				
				CurveFlattenMinDist="100"
				DetonateCallsKill="true" 
				FlightPathAdjustDistPerSecond="100">
			</BezierProjectile>
		</Behaviors>
		<Body>
			<ActiveBody
				id="ModuleTag_ActiveBody"
				MaxHealth="100.0" />
		</Body>
		<Geometry
			IsSmall="true">
			<Shape
				Type="SPHERE"
				MajorRadius="0.8"></Shape>
		</Geometry>
		<VisionInfo
			VisionRange="0" />
	</GameObject>
	<GameObject
		inheritFrom="FXMammothRocketPodMissile"
		id="FXMammothRocketPodMissile_Veteran"
		EditorName="FXMammothRocketPodMissile_Veteran">
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_ScriptedModelDraw"
				xai:joinAction="Replace">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="FX_RPGHeroic" />
				<ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="OrcaMissileTrailHeroic"
						FollowBone="true" />	
				</ModelConditionState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<BezierProjectile
				id="ModuleTag_BezierProjectileBehavior"
				FirstHeightMin="60"
				FirstHeightMax="60"
				SecondHeightMin="60"
				SecondHeightMax="60"
				FirstPercentIndent="30"
				SecondPercentIndent="90"
				GroundHitFX="FX_GDIMissleMissHeroic"
				MaxDistanceReachedFX="FX_GDIMissleSmallHit"				
				CurveFlattenMinDist="100"
				DetonateCallsKill="true" 
				FlightPathAdjustDistPerSecond="100">
			</BezierProjectile>
		</Behaviors>
	</GameObject>	
</AssetDeclaration>