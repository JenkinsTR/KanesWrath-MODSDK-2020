<?xml version="1.0" encoding="us-ascii"?>
<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<Tags></Tags>
	<Includes>
		<Include
			type="all"
			source="ART:FXShldAbility.w3x" />			
		<Include
			type="all"
			source="DATA:GlobalData/GlobalDefines.xml" />
	</Includes>
	<GameObject
		id="AlienCrystalShield"
		Side="ALIEN"
		EditorSorting="STRUCTURE"
		TransportSlotCount="0"
		CommandSet="EmptyCommandSet"
		KindOf="UNATTACKABLE NOT_AUTOACQUIRABLE IMMOBILE CAN_CAST_REFLECTIONS STRUCTURE RESIST_EMP IGNORED_IN_FINDPOSITIONAROUND"
		RadarPriority="NOT_ON_RADAR"
		EditorName="AlienCrystalShield">
		<DisplayName>AlienCrystalShield</DisplayName>
		<ArmorSet
			Armor="StructureArmor"
			DamageFX="GenericStructureDamageFX" />
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="FXShldAbility" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT">
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="USER_1">
					<Animation
						AnimationName="FXShldAbility"
						AnimationMode="ONCE" />
				</AnimationState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<!-- the slow death is for being blown up -->
			<SlowDeath
				id="ModuleTag_Death"
				SinkDelay="0.5s"
				SinkRate="2.4"
				DestructionDelay="5s">
				<DieMuxData
					DeathTypes="ALL"
					DeathTypesForbidden="FADED" />
			</SlowDeath>
			<!-- fading version is for timed out -->
			<SlowDeath
				id="ModuleTag_DeathFade"
				SinkRate="0"
				Fade="true"
				FadeTime="2s"
				DestructionDelay="2s">
				<DieMuxData
					DeathTypes="FADED" />
			</SlowDeath>
			<FXListBehavior
				id="ModuleTag_FXList">
				<DieMuxData
					DeathTypes="ALL" />
				<Event
					Index="onDeath"
					FX="FX_ALI_StasisShield_Die" />
			</FXListBehavior>
			<!-- fire a weapon that adds an attribute mod and paralyze which lasts for a short time. -->
			<FireWeaponUpdate
				id="ModuleTag_FireWeaponUpdate">
				<FireWeaponNugget
					WeaponName="AlienCrystalShieldWeaponTrigger"
				/>
			</FireWeaponUpdate>
			<LifetimeUpdate
				id="ModuleTag_Lifetime"
				DeathType="FADED"
				MinLifetime="20s"
				MaxLifetime="20s" />
		</Behaviors>
		<Body>
			<ActiveBody
				id="ModuleTag_Body"
				MaxHealth="3000.0" />
		</Body>
		<Geometry
			IsSmall="false">
			<Shape
				Type="SPHERE"
				MajorRadius="130"/>
		</Geometry>
		<AudioArraySound>
			<AudioEntry
				Sound="ALI_StasisShieldLoop"
				AudioType="soundAmbient" />
		</AudioArraySound>
		<ShadowInfo
			Type="VOLUME" />
		<VisionInfo
			VisionRange="125"
			ShroudClearingRange="150" />
	</GameObject>
</AssetDeclaration>