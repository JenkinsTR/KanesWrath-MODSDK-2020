<?xml version="1.0" encoding="us-ascii"?>
<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xai="uri:ea.com:eala:asset:instance">
	<Tags></Tags>
	<Includes>
		<Include
			type="all"
			source="ART:GUSonicProjectile.w3x" />
		<Include
			type="all"
			source="ART:FX_RPGHeroic.w3x" />			
	</Includes>
	<GameObject
		id="GDIOrcaECHOProjectile"
		Side="GDI"
		EditorSorting="SYSTEM"
		KindOf="PROJECTILE SMALL_MISSILE DEFLECT_BY_SPECIAL_POWER NO_COLLIDE HIDE_IF_FOGGED"
		EditorName="GDIOrcaECHOProjectile">
		<ArmorSet
			Armor="NoArmor" />
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_ScriptedModelDraw">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="GUSonicProjectile" />
					<ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="GDIZSonicProj_Trail"
						FollowBone="true" />
				</ModelConditionState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<DestroyDie
				id="ModuleTag_Die">
				<DieMuxData
					DeathTypes="ALL" />
			</DestroyDie>
			<FXListBehavior
				id="ModuleTag_FXList">
				<DieMuxData
					DeathTypes="ALL" />
				<Event
					Index="onDeath"
					FX="FX_GDI_Orca_EchoCannonImpactExplosion" />
			</FXListBehavior>
			<BezierProjectile
				id="ModuleTag_BezierProjectileBehavior"
				FirstHeightMin="1"
				FirstHeightMax="1"
				SecondHeightMin="5"
				SecondHeightMax="5"
				FirstPercentIndent="33"
				SecondPercentIndent="66"
				GroundHitFX="FX_GDI_SonicRifleGroundImpact"
				OrientToFlightPath="true"
				SidewaysDrift="25"
				FlightPathAdjustDistPerSecond="100.0"
				DetonateCallsKill="true" 
				/>
		</Behaviors>
		<Body>
			<ActiveBody
				id="ModuleTag_ActiveBody"
				MaxHealth="100.0" />
		</Body>
		<Geometry
			IsSmall="true">
			<Shape
				Type="SPHERE"
				MajorRadius="0.8"></Shape>
		</Geometry>
		<VisionInfo
			VisionRange="0" />
	</GameObject>

	
	<GameObject
		inheritFrom="GDIOrcaECHOProjectile"
		id="GDIOrcaECHOProjectile_Veteran"
		EditorName="GDIOrcaECHOProjectile_Veteran">
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_ScriptedModelDraw"
				xai:joinAction="Replace">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="GUSonicProjectile" />
				<ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="GDIZSonicProj_TrailHeroic"
						FollowBone="true" />	
				</ModelConditionState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<BezierProjectile
				id="ModuleTag_BezierProjectileBehavior"
				FirstHeightMin="1"
				FirstHeightMax="1"
				SecondHeightMin="5"
				SecondHeightMax="5"
				FirstPercentIndent="33"
				SecondPercentIndent="66"
				GroundHitFX="FX_GDI_SonicRifleGroundImpactHeroic"
				OrientToFlightPath="true"
				SidewaysDrift="25"
				FlightPathAdjustDistPerSecond="100.0"
				DetonateCallsKill="true" 
				/>
		</Behaviors>		
	</GameObject>

	
</AssetDeclaration>