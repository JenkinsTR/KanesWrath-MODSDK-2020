<?xml version="1.0" encoding="utf-8" ?>
<AssetDefinition xmlns="uri:thundermods.net:SAGE:WrathEdXML:AssetDefinition">

	<Asset
		id="GrapplingHookUpdateModuleData">
		<EntryInheritance
			id="base"
			AssetType="UpdateModuleData" />
		<Entry
			id="PullRate"
			AssetType="SageReal"
			IsAttribute="true"
			IsRequired="true" />
		<Entry
			id="MinBounceDelay"
			AssetType="Time"
			IsAttribute="true"
			Default="0.75s" />
		<Entry
			id="MaxBounceDelay"
			AssetType="Time"
			IsAttribute="true"
			Default="1.5s" />
		<Entry
			id="BouncePercentage"
			AssetType="Percentage"
			IsAttribute="true"
			Default="20%" />
		<Entry
			id="CollidingPullRateFactor"
			AssetType="Percentage"
			IsAttribute="true"
			Default="0%" />
		<EntryReference
			id="SingleFireWeapon"
			AssetType="WeaponTemplate"
			IsAttribute="true" />
		<EntryReference
			id="ContinuousFireWeapon"
			AssetType="WeaponTemplate"
			IsAttribute="true" />
		<EntryReference
			id="ContinuousFireWeaponBlocked"
			AssetType="WeaponTemplate"
			IsAttribute="true" />
		<Entry
			id="ContinuousFireWeaponDelay"
			AssetType="Time"
			IsAttribute="true"
			Default="0.5s" />
		<EntryRelocation
			id="ObjectStatusValidation"
			AssetType="ObjectStatusValidationDataType" />
		<EntryRelocation
			id="KeepAliveObjectFilter"
			AssetType="ObjectFilter" />
	</Asset>

</AssetDefinition>