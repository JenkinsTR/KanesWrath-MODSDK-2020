			<AttributeModifierUpgrade
				id="ModuleTag_AddAttributes"
				AttributeModifier="FortifiedBuilding_Bonus"
				Permanent="true">
				<TriggeredBy>Upgrade_FortifyBuilding</TriggeredBy>
			</AttributeModifierUpgrade>
		</Behaviors>
		<AI>
			<AIUpdate
				id="ModulTag_AIForLua"
