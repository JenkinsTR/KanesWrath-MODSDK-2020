						end
						if Prev == "STATE_stunned_flailing" then
						CurDrawableSetTransitionAnimState("STATE_stunned_landing")
						end
					</Script>
				</AnimationState>	
-->								
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DYING"
					StateName="STATE_Cover">
					<Animation
						AnimationName="NUVisrod_DIEA"
						AnimationMode="ONCE" />
				</AnimationState>
		
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="ATTACKING"
					Flags="RANDOMSTART">
					<Animation
						AnimationName="NUVisrod_ATKA"
						AnimationMode="LOOP"/>
				</AnimationState>		
<!--				
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="ACCELERATE MOVING"
					Flags="RANDOMSTART">
					<Animation
						AnimationName="NUVisrod_ACCL"
						AnimationMode="LOOP"
						Distance="30" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DECELERATE MOVING"
					Flags="RANDOMSTART">
					<Animation
						AnimationName="NUVisrod_DECL"
						AnimationMode="LOOP"
						Distance="30" />
				</AnimationState>
-->				
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING"
					Flags="RANDOMSTART">
					<Animation
						AnimationName="NUVisrod_MOVA"
						AnimationMode="LOOP"
						AnimationPriority="30"
						Distance="30" />
				</AnimationState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<WeaponSetUpdate
				id="ModuleTag_WeaponSetUpdate">
				<WeaponSlotHardpoint
					ID="1"
					AllowInterleavedFiring="false"
					InterleavedStyle="INTERLEAVE_FIRST_AVAILABLE"
					WeaponChoiceCriteria="PREFER_MOST_DAMAGE">
					<Weapon
						Ordering="PRIMARY_WEAPON"
						Template="NeutralViceroidSpittleWeapon" />
				</WeaponSlotHardpoint>
			</WeaponSetUpdate>
			
			<StealthDetectorUpdate
				id="ModuleTag_StealthDetect"
				DetectionRange="100" />
			
			<Physics
				id="ModuleTag_Physics" />
			<AutoHealBehavior
				InitiallyActive="true"
				HealingAmount="10"
				HealingDelay="1s"
				HealOnlyIfNotUnderAttack="false"
				/>
			<SlowDeath
				id="ModuleTag_Death"
				SinkDelay="3s"
				SinkRate="2.4"
				DestructionDelay="8s">
				<Sound Type="INITIAL" List="ALI_Viceroid_SoundDie" /> 
				<DieMuxData
					DeathTypes="ALL" />
			</SlowDeath>
			<StancesBehavior
				id="ModuleTag_Stance"
				StanceTemplate="AggressiveOnly"/>
		</Behaviors>
		<AI>
			<!-- If you make that wander distance small, like about 10 or so, they'll
				walk around really funkily (don't know if you want that) -->
			<WanderAIUpdate
				id="ModuleTag_AI"
				AutoAcquireEnemiesWhenIdle="YES"				
				WanderDistance="100"
				AttackAll="true"
				Selectable="true">
				<UnitAITargetChooserData 
					CanAutoAcquireNonAutoAcquirable="true" 
				/>
			</WanderAIUpdate>
		</AI>
		<Body>
			<ActiveBody
				id="ModuleTag_Body"
				MaxHealth="500.0"
				InitialHealth="500.0" />
		</Body>
		<Geometry
			IsSmall="true">
			<Shape
				Type="CYLINDER"
				MajorRadius="7.0"
				Height="13.0"></Shape>
		</Geometry>
		<AudioArrayVoice>
			<AudioEntry
				Sound="ALI_Viceroid_SoundAttack"
				AudioType="voiceAttack" />
			<AudioEntry
				Sound="ALI_Viceroid_SoundCreate"
				AudioType="voiceCreated" />
			<AudioEntry
				Sound="ALI_Viceroid_SoundMove"
				AudioType="voiceMove" />
			<AudioEntry
				Sound="ALI_Viceroid_SoundMove"
				AudioType="voiceGuard" />
			<AudioEntry
				Sound="ALI_Viceroid_SoundSelect"
				AudioType="voiceSelect" />
		</AudioArrayVoice>
		<AudioArraySound>
			<AudioEntry Sound="ALI_Viceroid_AmbientDelayedLoop" AudioType="soundAmbient" />
		</AudioArraySound>
		<ShadowInfo
			Type="DECAL"
			SizeX="14"
			SizeY="14"
			Texture="ShadowI" />
		<VisionInfo
			VisionRange="100"
			ShroudClearingRange="0" />
		<CrusherInfo
			CrushableLevel="0" />
	</GameObject>
</AssetDeclaration>
