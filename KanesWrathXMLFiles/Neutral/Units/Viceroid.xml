<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xai="uri:ea.com:eala:asset:instance">
	<Tags></Tags>
	<Includes>
		<Include type="all"	source="ART:NUVisrod_SKN.w3x" />
		<Include type="all"	source="ART:NUVisrod_ACCL.w3x" />
		<Include type="all"	source="ART:NUVisrod_ATKA.w3x" />
		<Include type="all"	source="ART:NUVisrod_DECL.w3x" />
		<Include type="all"	source="ART:NUVisrod_DIEA.w3x" />
		<Include type="all"	source="ART:NUVisrod_IDLA.w3x" />
		<Include type="all"	source="ART:NUVisrod_MOVA.w3x" />
		<Include type="all"	source="ART:NUVisrod_MOVB.w3x" />
		<!-- Base Object -->
		<Include
			type="instance"
			source="DATA:BaseObjects/BaseInfantry.xml" />
	</Includes>
	<StanceTemplate id="AggressiveOnly">
		<StanceDefinition Type="AGGRESSIVE" />
	</StanceTemplate>

	<GameObject
		id="Viceroid"
		inheritFrom="BaseInfantry" 
		SelectPortrait="Portrait_NeutralVisceroid"
		ButtonImage="Portrait_NeutralVisceroid"
		Side="Neutral"
		EditorSorting="UNIT"
		TransportSlotCount="1"
		CommandSet="EmptyCommandSet"
		KindOf="PRELOAD SELECTABLE CAN_ATTACK ATTACK_NEEDS_LINE_OF_SIGHT CAN_CAST_REFLECTIONS INFANTRY IGNORES_SELECT_ALL"
		RadarPriority="UNIT"
		EditorName="Viceroid"
		TypeDescription="Type:Visceroid">
		<DisplayName>Name:Visceroid</DisplayName>
		<ArmorSet
			Armor="NeutralViceroidArmor"
			DamageFX="InfantryDamageFX" />
		<LocomotorSet
			Locomotor="HumanLocomotor"
			Condition="NORMAL"
			Speed="75.0" />
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="false">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="NUVisrod_SKN" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT"
					Flags="RESTART_ANIM_WHEN_COMPLETE"
					AllowRepeatInRandomPick="true"
					StateName="STATE_bored">
					<Animation
						AnimationName="NUVisrod_IDLA"
						AnimationMode="ONCE"
						AnimationPriority="30"
						AnimationSpeedFactorMin="0.8"
						AnimationSpeedFactorMax="1.2" />
				</AnimationState>	
