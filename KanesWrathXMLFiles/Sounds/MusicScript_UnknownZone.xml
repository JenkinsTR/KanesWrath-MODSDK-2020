<?xml version="1.0" encoding="UTF-8"?>
<AssetDeclaration xmlns="uri:ea.com:eala:asset">
	<Tags />
	<Includes>
		<Include
			source="DATA:sounds/MusicScript_CommonConditions.xml"
			type="instance"/>
	</Includes>


	<MusicScriptTrack
		id="MusicTrack_BaseBuilding_Unknown"
		TrackTypeKey="BaseBuildingTrack"
		Level="0"
		Priority="0"
		Track="Music_BaseBuilding_Unknown" >
		<Timeout Weight="=$LEVEL_0_TIMEOUT_1_CHANCE" Duration="=$LEVEL_0_TIMEOUT_1" />
		<Timeout Weight="=$LEVEL_0_TIMEOUT_2_CHANCE" Duration="=$LEVEL_0_TIMEOUT_2" />
		<Timeout Weight="=$LEVEL_0_TIMEOUT_3_CHANCE" Duration="=$LEVEL_0_TIMEOUT_3" />
	</MusicScriptTrack>

	<MusicScriptTrack
		id="MusicTrack_Explore_Unknown"
		TrackTypeKey="ExploreTrack"
		Level="0"
		Priority="1"
		Condition="MusicScriptCondition_ExploreCheck" 
		ConditionsAreLatch="true" 
		Track="Music_Explore_Unknown" >
		<Timeout Weight="=$LEVEL_0_TIMEOUT_1_CHANCE" Duration="=$LEVEL_0_TIMEOUT_1" />
		<Timeout Weight="=$LEVEL_0_TIMEOUT_2_CHANCE" Duration="=$LEVEL_0_TIMEOUT_2" />
		<Timeout Weight="=$LEVEL_0_TIMEOUT_3_CHANCE" Duration="=$LEVEL_0_TIMEOUT_3" />
	</MusicScriptTrack>

	<MusicScriptTrack
		id="MusicTrack_Explore2_Unknown"
		TrackTypeKey="Explore2Track"
		Level="0"
		Priority="2"
		Condition="MusicScriptCondition_Explore2Check" 
		ConditionsAreLatch="true" 
		Track="Music_Explore2_Unknown" >
		<Timeout Weight="=$LEVEL_0_TIMEOUT_1_CHANCE" Duration="=$LEVEL_0_TIMEOUT_1" />
		<Timeout Weight="=$LEVEL_0_TIMEOUT_2_CHANCE" Duration="=$LEVEL_0_TIMEOUT_2" />
		<Timeout Weight="=$LEVEL_0_TIMEOUT_3_CHANCE" Duration="=$LEVEL_0_TIMEOUT_3" />
	</MusicScriptTrack>



	<MusicPalette
		id="MusicPalette_UnknownZone" >
		<Track>MusicTrack_BaseBuilding_Unknown</Track>
		<Track>MusicTrack_Explore_Unknown</Track>
		<Track>MusicTrack_Explore2_Unknown</Track>
		<Track>MusicTrack_Action</Track>
		<!-- 	<Track>MusicTrack_Triumphal</Track> -->
	</MusicPalette>

	<!-- This is the palette we assign to new maps, so that we can see that the designer has not yet assigned the palette and we 
	     can go yell at him. In the game, it acts the same as the UnknownZone palette -->
	<MusicPalette
		id="MusicPalette_NotSet" 
		IsDefaultForNewMap ="true" >
		<Track>MusicTrack_BaseBuilding_Unknown</Track>
		<Track>MusicTrack_Explore_Unknown</Track>
		<Track>MusicTrack_Explore2_Unknown</Track>
		<Track>MusicTrack_Action</Track>
		<!-- 	<Track>MusicTrack_Triumphal</Track> -->
	</MusicPalette>

</AssetDeclaration>
