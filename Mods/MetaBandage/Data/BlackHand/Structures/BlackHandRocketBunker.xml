		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true"
				ExtraPublicBone="FX_WEAPEN01 FX_WEAPEN02 FX_WEAPEN03">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="NBDHub_M_SKN" />					
					<WeaponFireFXBone
						WeaponSlotType="PRIMARY_WEAPON"
						WeaponSlotID="1"
						BoneName="FX_WEAPEN" />
					<WeaponLaunchBone
						WeaponSlotID="1"
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="FX_WEAPEN" />
					<Turret
						TurretNameKey="TORRET"
						TurretPitch="TORRET_PITCH"
						TurretID="1" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="BUILD_PLACEMENT_CURSOR">
					<Model
						Name="NBDHub_M_SKN" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="RUBBLE">
					<Model
						Name="NBDHub_D3SN" />
				</ModelConditionState>	
				<!-- Quad Turret -->
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="USER_6 STRUCTURE_UNPACKING">
					<Model
						Name="NBDHub_QMBld_SKN" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="USER_6 REALLYDAMAGED">
					<Model
						Name="NBDHub_QM_D2_SKN" />
					<ParticleSysBone
						BoneName="RootTransform"
						FXParticleSystemTemplate="NODBunkerDist"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="RootTransform"
						FXParticleSystemTemplate="NODBunkerFire"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="RootTransform"
						FXParticleSystemTemplate="NODBunkerSmoke"
						FollowBone="true" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="USER_6 DAMAGED">
					<Model
						Name="NBDHub_QM_SKN" />
					<Texture
						Original="NBDHub"
						New="NBDHub_D" />
					<Texture
						Original="NBDefense"
						New="NBDefenseD" />
					<Texture
						Original="NUTibCoreMissles"
						New="NUTibCoreMissles_D" />
					<ParticleSysBone
						BoneName="RootTransform"
						FXParticleSystemTemplate="NODBunkerSmoke"
						FollowBone="true" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="USER_6">
					<Model
						Name="NBDHub_QM_SKN" />	
				</ModelConditionState>
				
				<!-- Default -->
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="STRUCTURE_UNPACKING">
					<Model
						Name="NBDHub_MBld_SKN" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="REALLYDAMAGED">
					<Model
						Name="NBDHub_M_D2_SKN" />
					<ParticleSysBone
						BoneName="RootTransform"
						FXParticleSystemTemplate="NODBunkerDist"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="RootTransform"
						FXParticleSystemTemplate="NODBunkerFire"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="RootTransform"
						FXParticleSystemTemplate="NODBunkerSmoke"
						FollowBone="true" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DAMAGED">
					<Model
						Name="NBDHub_M_SKN" />
					<Texture
						Original="NBDHub"
						New="NBDHub_D" />
					<Texture
						Original="NBDefense"
						New="NBDefenseD" />
					<Texture
						Original="NUTibCoreMissles"
						New="NUTibCoreMissles_D" />
					<ParticleSysBone
						BoneName="RootTransform"
						FXParticleSystemTemplate="NODBunkerSmoke"
						FollowBone="true" />
				</ModelConditionState>
				
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT">
					<!-- no anim -->
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="BUILD_PLACEMENT_CURSOR">
					<Script>
						CurDrawableHideSubObject("TCMHUB_UPGRADE")
					</Script>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="STRUCTURE_UNPACKING">
					<Animation
						AnimationName="NBDHub_QMBld_AAN"
						AnimationMode="ONCE" />
				</AnimationState>

				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="RUBBLE"
					StateName="STATE_Rubble"
					Flags="START_FRAME_LAST">
					<Animation
						AnimationName="NBDHub_D3AN"
						AnimationMode="MANUAL" />
					<Script>
						Prev = CurDrawablePrevAnimationState();
						if Prev ~= "STATE_Rubble" and Prev ~= "TRANS_IntoRubble" then
						CurDrawableSetTransitionAnimState("TRANS_IntoRubble")
						end
					</Script>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="REALLYDAMAGED"
					StateName="STATE_ReallyDamaged"
					Flags="START_FRAME_LAST">
					<Animation
						AnimationName="NBDHub_QM_D2_AAN"
						AnimationMode="MANUAL" />
					<Script>
						Prev = CurDrawablePrevAnimationState();
						if Prev ~= "STATE_ReallyDamaged" and Prev ~= "TRANS_IntoReallyDamaged" then
						CurDrawableSetTransitionAnimState("TRANS_IntoReallyDamaged")
						end
					</Script>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_IntoReallyDamaged">
					<Animation
						AnimationName="NBDHub_QM_D2_AAN"
						AnimationMode="ONCE"
						AnimationBlendTime="0" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_IntoRubble">
					<Animation
						AnimationName="NBDHub_D3AN"
						AnimationMode="ONCE"
						AnimationBlendTime="0" />
				</AnimationState>
			</ScriptedModelDraw>
			<SpotlightDraw
				id="ModuleTag_Spotlight"
				AttachToBoneInAnotherModule="bone_stealthdetector"
				RefreshTime="2.0s"
				SweepTime="1.0s">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="FXspotlight" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="BUILD_PLACEMENT_CURSOR">
