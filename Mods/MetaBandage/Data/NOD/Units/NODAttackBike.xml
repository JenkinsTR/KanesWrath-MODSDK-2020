<?xml version="1.0" encoding="utf-8"?>
<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xi="http://www.w3.org/2001/XInclude">
<!--Changed so it uses only one model between no upgrades and upgrade-->
<!--Fixed weapon launch bones-->
<!--Added Damaged TibCore Texture-->
	<Includes>
		<Include type="all" source="ART:NUATKBIKE_SKN.w3x" />
	</Includes>
	<GameObject
		id="NODAttackBike"
		SelectPortrait="Portrait_NODAttackBike"
		ButtonImage="Portrait_NODAttackBike"
		Side="NOD"
		EditorSorting="UNIT"
		TransportSlotCount="1"
		BuildCost="600"
		BuildTime="6"
		CommandSet="NODAttackBikeCommandSet"
		CommandPoints="100" 
		KindOf="PRELOAD SELECTABLE CAN_ATTACK ATTACK_NEEDS_LINE_OF_SIGHT CAN_CAST_REFLECTIONS SCORE TRANSPORT VEHICLE CAN_BE_FAVORITE_UNIT"
		RadarPriority="UNIT"
		UnitCategory="VEHICLE"
		ProductionQueueType="VEHICLE"
		VoicePriority="160"
		EditorName="NODAttackBike"
		WeaponCategory="MISSILE"
		Description="Desc:NODAttackBike"
		TypeDescription="Type:NODAttackBike"
		WorldMapArmoryUpgradesAllowed="Upgrade_NODTechCenterTibCoreMissiles"
		ShockwaveResistance="100"
		ReinvisibilityDelay="7s">
		<DisplayName>Name:NODAttackBike</DisplayName>
		<DisplayUpgrade>Upgrade_NODTechCenterTibCoreMissiles</DisplayUpgrade>
		<ArmorSet
			Armor="NODAttackBikeArmor"
			DamageFX="VehicleDamageFX" />
		<LocomotorSet
			Locomotor="NODAttackBikeLocomotor"
			Condition="NORMAL"
			Speed="160.0" />
		<SkirmishAIInformation
			UnitBuilderStandardCombatUnit="true" />
		<Draws>
			<TruckDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true"
				TrackMarks="EXTireTrack"
				TrackMarksOnlyWhenCorneringQuickly="true"
				TrackMarksLeftBone="Bone_podl_pitch"
				TrackMarksRightBone="Bone_podr_pitch"
				LeftFrontTireBone="Tire01"
				RightFrontTireBone="Tire02"
				LeftRearTireBone="Bone_FrontWheel"
				RightRearTireBone="Bone_RearWheel"
				TireRotationMultiplier="0.2"
				PowerslideRotationAddition="1.25">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="NUAtkBike_SKN" />
					<WeaponFireFXBone
						WeaponSlotID="1"
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="FX_Weapon" />
					<WeaponLaunchBone
						WeaponSlotID="1"
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="FX_Weapon" />
					<Turret
						TurretNameKey="TurretL"
						TurretPitch="Bone_PodL_Pitch"
						TurretID="1" />
					<Turret
						TurretNameKey="TurretR"
						TurretPitch="Bone_PodR_Pitch"
						TurretID="1" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FORMATION_PREVIEW">
					<Model
						Name="NUAtkBike_FP" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DAMAGED">
					<Model
						Name="NUAtkBike_SKN" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="REALLYDAMAGED">
					<Model
						Name="NUAtkBike_SKN" />
					<Texture
						Original="NUAtkBike"
						New="NUAtkBikeD" />
					<Texture
						Original="NUTibCoreMissles"
						New="NUTibCoreMissles_D" />
					<ParticleSysBone
						BoneName="ROOTTRANSFORM"
						FXParticleSystemTemplate="GDIDebrisSmallSmoke"
						FollowBone="true" />
				</ModelConditionState>				
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DYING">
					<Model
						Name="NUAtkBikeR_SKN" />
					<ParticleSysBone
						BoneName="ROOTTRANSFORM"
						FXParticleSystemTemplate="GDIDebrisSmallFire"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="ROOTTRANSFORM"
						FXParticleSystemTemplate="GDIDebrisSmallFireDistortion"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="ROOTTRANSFORM"
						FXParticleSystemTemplate="GDIDebrisSmallSmoke"
						FollowBone="true" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT">
					<Animation
						AnimationName="NUAtkBike_IDLA"
						AnimationMode="LOOP"
						AnimationBlendTime="5" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING TURN_LEFT_HIGH_SPEED">
					<Animation
						AnimationName="NUAtkBike_TRNL"
						AnimationMode="LOOP"
						AnimationBlendTime="5" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING TURN_RIGHT_HIGH_SPEED">
					<Animation
						AnimationName="NUAtkBike_TRNR"
						AnimationMode="LOOP"
						AnimationBlendTime="5" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING TURN_LEFT">
					<Animation
						AnimationName="NUAtkBike_TRNL"
						AnimationMode="LOOP"
						AnimationBlendTime="5" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING TURN_RIGHT">
					<Animation
						AnimationName="NUAtkBike_TRNR"
						AnimationMode="LOOP"
						AnimationBlendTime="5" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING">
					<Animation
						AnimationName="NUAtkBike_IDLA"
						AnimationMode="LOOP"
						AnimationBlendTime="15" />
				</AnimationState>
			</TruckDraw>
			<SpotlightDraw
				id="ModuleTag_Spotlight"
				AttachToBoneInAnotherModule="Driver"
				RefreshTime="2.0s"
				SweepTime="1.0s">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="FXspotlight" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FORMATION_PREVIEW">
					<!-- When in Formation Preview do not show -->
					<Model
						Name="" />
				</ModelConditionState>					
			</SpotlightDraw>
		</Draws>
		<Behaviors>
			<AttributeModifierPoolUpdate 
				id="DefaultAttributeModifierPoolUpdate"/>
			<SquishCollide
				id ="DefaultSquishCollide"/>
			<FireWeaponWhenDead
				id="ModuleTag_CatalystDeathWeapon"
				InitiallyActive="true"
				DeathWeapon="CatalystInfantryDeathWeapon"
				ContinueToBezierDestination="false">
				<DieMuxData DeathTypes="CATALYST" />
			</FireWeaponWhenDead>
			<!--Heroic level units auto healing-->
			<AutoHealBehavior
				id="Upgrade_HeroicHeal"
				InitiallyActive="false"
				HealOnlyIfNotInCombat="false"
				HealOnlyIfNotUnderAttack="false"
				StartHealingDelay="1s"
				HealingAmount="100"
				HealingDelay=".5s">
				<TriggeredBy>Upgrade_Veterancy_HEROIC</TriggeredBy>
			</AutoHealBehavior>
			<AttributeModifierUpgrade
				id="ModuleTag_AttributeModifierUpgradeMUCSpeed"
				AttributeModifier="Modifier_MultifunctionUpgradeCenterSpeed">
				<TriggeredBy>Upgrade_MultifunctionUpgradeCenterSpeed</TriggeredBy>
			</AttributeModifierUpgrade>
			<AttributeModifierUpgrade
				id="ModuleTag_AttributeModifierUpgradeMUCDamage"
				AttributeModifier="Modifier_MultifunctionUpgradeCenterDamage">
				<TriggeredBy>Upgrade_MultifunctionUpgradeCenterDamage</TriggeredBy>
			</AttributeModifierUpgrade>
			<AttributeModifierUpgrade
				id="ModuleTag_AttributeModifierUpgradeMUCArmor"
				AttributeModifier="Modifier_MultifunctionUpgradeCenterArmor">
				<TriggeredBy>Upgrade_MultifunctionUpgradeCenterArmor</TriggeredBy>
			</AttributeModifierUpgrade>
			<StancesBehavior
				id="ModuleTag_Stance"
				StanceTemplate="Generic" />
			<LevelUpUpgrade
				id="ModuleTag_LevelUpUpgrade_Veteran"
				LevelCap="4"
				LevelsToGain="1">
				<TriggeredBy>Upgrade_ProductionVeterancy_VETERAN</TriggeredBy>
			</LevelUpUpgrade>
			<LevelUpUpgrade
				id="ModuleTag_LevelUpUpgrade_Elite"
				LevelCap="4"
				LevelsToGain="2">
				<TriggeredBy>Upgrade_ProductionVeterancy_ELITE</TriggeredBy>
			</LevelUpUpgrade>
			<LevelUpUpgrade
				id="ModuleTag_LevelUpUpgrade_Heroic"
				LevelCap="4"
				LevelsToGain="3">
				<TriggeredBy>Upgrade_ProductionVeterancy_HEROIC</TriggeredBy>
			</LevelUpUpgrade>
			<!-- Nod Cloaking Field -->
			<InvisibilityUpdate
				id="ModuleTag_Invisibility"
				UpdatePeriod="0.5s">
				<InvisibilityNugget />
				<RequiresUpgrade>Upgrade_CloakingFieldInvisibility</RequiresUpgrade>
			</InvisibilityUpdate>
			<StealthUpgrade
				id="ModuleTag_InvisibilityTrigger">
				<TriggeredBy>Upgrade_CloakingFieldInvisibility</TriggeredBy>
			</StealthUpgrade>
			<TemporarilyDefectUpdate
				id="ModuleTag_TemporarilyDefect"
				DefectionFrameCount="300" />
			<WeaponSetUpdate
				id="ModuleTag_WeaponSetUpdate">
				<WeaponSlotTurret
					ID="1">
					<Weapon
						Ordering="PRIMARY_WEAPON"
						Template="NODAttackBikeRocket" />
					<Weapon
						Ordering="PRIMARY_WEAPON"
						Template="NODAttackBikeRocketTibCore"
						ObjectStatus="WEAPON_UPGRADED_01" />
					<TurretSettings
						TurretTurnRate="360"
						MaxDeflectionAntiClockwise="180d"
						MaxDeflectionClockwise="180d"
						TurretPitchRate="360"
						AllowsPitch="true"
						MinimumPitch="-10d"
						PitchHeight="90%"
						MinIdleScanTime="1.0s"
						MaxIdleScanTime="5.0s"
						MinIdleScanAngle="0.0"
						MaxIdleScanAngle="90.0">
						<TurretAITargetChooserData
							CanAcquireDynamicIfAssignedOutOfRange="true" />
					</TurretSettings>
				</WeaponSlotTurret>
			</WeaponSetUpdate>
			<Physics
				id="ModuleTag_04" />
			<ProductionUpdate
				id="ModuleTag_08" />
			<StealthDetectorUpdate
				id="ModuleTag_ScannerPack_01"
				DetectionRange="400"
				InitiallyDisabled="false" />
			<SlowDeath
				id="ModuleTag_Death"
				SinkDelay="3s"
				SinkRate="1.0"
				DestructionDelay="7s">
				<OCL
					Type="INITIAL">
					<OCL>OCL_NODAttackBikeDebris</OCL>
				</OCL>
				<DieMuxData
					DeathTypes="ALL"
					DeathTypesForbidden="TOPPLED" />
				<Sound Type="INITIAL" List="NOD_Generic_VoiceDieMS" />
			</SlowDeath>
			<FXListBehavior
				id="ModuleTag_FXList">
				<DieMuxData
					DeathTypes="ALL" />
				<Event
					Index="onDeath"
					FX="FX_GDIVehicleExplodeNoScorch" />
			</FXListBehavior>
			<StatusBitsUpgrade
				id="ModuleTag_UpgradeWeapon"
				StatusToSet="WEAPON_UPGRADED_01">
				<TriggeredBy>Upgrade_NODTechCenterTibCoreMissiles</TriggeredBy>
			</StatusBitsUpgrade>
			<AudioLoopUpgrade 
				id="NOD_TiberiumCoreMissile_Upgrade" 
				SoundToPlay="AudioEvent:NOD_TiberiumCoreMissile_Upgrade">
				<TriggeredBy>Upgrade_NODTechCenterTibCoreMissiles</TriggeredBy>
      		</AudioLoopUpgrade>
			<SubObjectsUpgrade
				id="ModuleTag_TibCoreSubObject"
				ShowSubObjects="TIBCOREMISSILER TIBCOREMISSILEL">
				<TriggeredBy>Upgrade_NODTechCenterTibCoreMissiles</TriggeredBy>
			</SubObjectsUpgrade>
			<StatusBitsUpgrade
				id="ModuleTag_VeterancyUpgrade"
				StatusToSet="WEAPON_UPGRADED_03">
				<TriggeredBy>Upgrade_Veterancy_HEROIC</TriggeredBy>
			</StatusBitsUpgrade>			
			<CreateAndEnterObjectSpecialPower
				id="ModuleTag_CallForTransport"
				SpecialPowerTemplate="SpecialPowerCallForTransportNOD"
				OCL="OCL_NodCallForTransportVehicle"
				CreateLocation="CREATE_ABOVE_LOCATION"
				TriggerFX="FX_NODCallForTransportFlare"
				ChildModuleHandlesFX="true"
				IdleWhenStartingPower="true">
				<FXOffset x="25" y="0" z="0"></FXOffset>
			</CreateAndEnterObjectSpecialPower>
		</Behaviors>
		<AI>
			<AIUpdate
				id="ModuleTag_03"
				AutoAcquireEnemiesWhenIdle="YES"
				AILuaEventsList="NODAttackBikeFunctions">
				<UnitAITargetChooserData
					CanPickDynamicTargets="false"
					SympathyRange="100.0"
					RotateToTargetWhenAiming="false" />
			</AIUpdate>
		</AI>
		<Body>
			<ActiveBody
				id="ModuleTag_02"
				MaxHealth="800" />
		</Body>
		<Geometry
			IsSmall="true">
			<Shape
				Type="BOX"
				MajorRadius="14.0"
				MinorRadius="7.0"
				Height="11.5"></Shape>
		</Geometry>
		<AudioArrayVoice>
			<AudioEntry
				Sound="AudioEvent:NOD_AttackBike_VoiceAttack"
				AudioType="voiceAttack" />
			<AudioEntry
				Sound="AudioEvent:NOD_AttackBike_VoiceCreate"
				AudioType="voiceCreated" />
			<AudioEntry
				Sound="AudioEvent:NOD_AttackBike_VoiceMove"
				AudioType="voiceGuard" />
			<AudioEntry
				Sound="AudioEvent:NOD_AttackBike_VoiceMove"
				AudioType="voiceMove" />
			<AudioEntry
				Sound="AudioEvent:NOD_AttackBike_VoiceMoveAttack"
				AudioType="voiceAttackAfterMoving" />
			<AudioEntry
				Sound="AudioEvent:NOD_AttackBike_VoiceRetreat"
				AudioType="voiceRetreatToCastle" />
			<AudioEntry
