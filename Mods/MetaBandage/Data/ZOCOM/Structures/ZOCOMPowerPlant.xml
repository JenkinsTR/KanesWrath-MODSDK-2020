					<Model
						Name="GBPwrPlntD2_SN" />
					<ParticleSysBone
						BoneName="FXBone02"
						FXParticleSystemTemplate="GDIPPDamagedSteam"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="FXBone02"
						FXParticleSystemTemplate="GDISiloDamagedDist2"
