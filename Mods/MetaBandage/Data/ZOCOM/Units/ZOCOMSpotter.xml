					<Weapon
						Ordering="PRIMARY_WEAPON"
						Template="GDISniperRifle" />
				</WeaponSlotHardpoint>
			</WeaponSetUpdate>
			<Physics
				id="ModuleTag_Physics" />
			<SlowDeath
				id="ModuleTag_Death"
				SinkDelay="3s"
				SinkRate="2.4"
				DestructionDelay="4.5s">
				<DieMuxData
					DeathTypes="ALL" />
				<Sound
