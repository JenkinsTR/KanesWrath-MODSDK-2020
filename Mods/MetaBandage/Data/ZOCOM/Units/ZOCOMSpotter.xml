		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true"
				InitialRecoilSpeed="0.1"
				MaxRecoilDistance="0.1"
				RecoilDamping="2.0"
				RecoilSettleSpeed="3.0"
				ExtraPublicBone="B_WEAPONA_FX">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="GUSnprSP_SKN" />
					<WeaponFireFXBone
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="B_WEAPONA_FX" />
					<WeaponRecoilBone
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="B_WEAPONA_FX" />
					<WeaponMuzzleFlash
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="B_WEAPONA_FX" />
					<WeaponLaunchBone
						WeaponSlotType="PRIMARY_WEAPON"
						BoneName="B_WEAPONA_FX" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FORMATION_PREVIEW">
					<Model
						Name="FXInfantry_FP" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FORMATION_PREVIEW">
					<!-- no anim -->
				</AnimationState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="INSIDE_GARRISON">
					<Model
						Name="GUGar_Spot" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="INSIDE_GARRISON">
					<!-- no anim -->
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT"
					Flags="RESTART_ANIM_WHEN_COMPLETE"
					StateName="STATE_Prone">
					<Animation
						AnimationName="GUSnprSP_BIDA"
						AnimationPriority="10"
						AnimationMode="ONCE" />
					<Animation
						AnimationName="GUSnprSP_BIFA"
						AnimationPriority="1"
						AnimationMode="ONCE" />
					<Animation
						AnimationName="GUSnprSP_BIFB"
						AnimationPriority="1"
						AnimationMode="ONCE" />
					<Animation
						AnimationName="GUSnprSP_BIFC"
						AnimationPriority="1"
						AnimationMode="ONCE" />
					<Animation
						AnimationName="GUSnprSP_BIFD"
						AnimationPriority="1"
						AnimationMode="ONCE" />
					<Animation
						AnimationName="GUSnprSP_BIFE"
						AnimationPriority="1"
						AnimationMode="ONCE" />
					<Script>

						Prev = CurDrawablePrevAnimationState()
						if Prev ~= "STATE_Prone" and Prev ~= "TRANS_ToProne" and Prev ~= "TRANS_SelectedToProne" then
						CurDrawableSetTransitionAnimState("TRANS_ToProne")
						end


						if Prev == "STATE_SelectedPose" then
						CurDrawableSetTransitionAnimState("TRANS_SelectedToProne")
						end

						if Prev == "STATE_stunned_flailing" then
						CurDrawableSetTransitionAnimState("STATE_stunned_landing")
						end

					</Script>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="STUNNED_FLAILING"
					StateName="STATE_stunned_flailing">
					<Animation
						AnimationName="GUSnprSP_FLYA"
						AnimationMode="LOOP" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					StateName="STATE_stunned_landing">
					<Animation
						AnimationName="GUSnprSP_LNDA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="BACKCRUSHED">
					<Animation
						AnimationName="GUSnprSP_CDTB"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DYING_WASMOVING DYING">
					<Animation
						AnimationName="GUSnprSP_DIEB"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="COVER DYING">
					<Animation
						AnimationName="GUSnprSP_KDIA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DYING">
					<Animation
						AnimNickName="DTA"
						AnimationName="GUSnprSP_DIEA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING"
					Flags="RANDOMSTART">
					<Animation
						AnimationName="GUSnprSP_CRNA"
						AnimationMode="LOOP" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="PACKING"
					Flags="RANDOMSTART">
					<Animation
						AnimationName="GUSnprSP_AIDA"
						AnimationMode="LOOP" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="COVER USING_WEAPON_A"
					StateName="STATE_Kneeling">
					<Animation
						AnimationName="GUSnprSP_KAKA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="COVER"
					Flags="RESTART_ANIM_WHEN_COMPLETE"
					StateName="STATE_Kneeling">
					<Animation
						AnimationName="GUSnprSP_KBIA"
						AnimationPriority="80"
						AnimationMode="ONCE"
						AnimationBlendTime="15" />
					<Animation
						AnimationName="GUSnprSP_KBFA"
						AnimationPriority="40"
						AnimationMode="ONCE"
						AnimationBlendTime="5" />
					<Animation
						AnimationName="GUSnprSP_KBFB"
						AnimationPriority="40"
						AnimationMode="ONCE"
						AnimationBlendTime="5" />
					<Animation
						AnimationName="GUSnprSP_KBFC"
						AnimationPriority="40"
						AnimationMode="ONCE"
						AnimationBlendTime="5" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="SUPPRESSED MOVING"
					StateName="STATE_Prone">
					<Animation
						AnimationName="GUSnprSP_SMVA"
						AnimationMode="LOOP" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING USING_WEAPON_A"
					StateName="STATE_Kneeling">
					<Animation
						AnimationName="GUSnprSP_ATRA"
						AnimationMode="LOOP" />
					<Script>
						Prev = CurDrawablePrevAnimationState();
						if Prev ~= "STATE_Kneeling" and Prev ~= "TRANS_ToMovingFromProne" then
						CurDrawableSetTransitionAnimState("TRANS_ToMovingFromProne")
						end
					</Script>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING"
					StateName="STATE_Kneeling">
					<Animation
						AnimationName="GUSnprSP_CRNA"
						AnimationMode="LOOP"
						AnimationBlendTime="15" />
					<Script>
						Prev = CurDrawablePrevAnimationState();
						if Prev ~= "STATE_Kneeling" and Prev ~= "TRANS_ToMovingFromProne" then
							CurDrawableSetTransitionAnimState("TRANS_ToMovingFromProne")
						end
					</Script>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="USING_WEAPON_A"
					StateName="STATE_Prone">
					<Animation
						AnimationName="GUSnprSP_ATKA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="EMOTION_CELEBRATING">
					<Animation
						AnimationName="GUSnprSP_CHRA"
						AnimationMode="LOOP" />
				</AnimationState>
				<!-- SELECTED -->
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="SELECTED"
					Flags="RESTART_ANIM_WHEN_COMPLETE"
					StateName="STATE_SelectedPose">
					<Animation
						AnimationName="GUSnprSP_AIDA"
						AnimationMode="ONCE"
						AnimationPriority="80"
						AnimationBlendTime="15" />
					<Animation
						AnimationName="GUSnprSP_AIFA"
						AnimationMode="ONCE"
						AnimationPriority="40"
						AnimationBlendTime="5" />
					<Animation
						AnimationName="GUSnprSP_AIFB"
						AnimationMode="ONCE"
						AnimationPriority="40"
						AnimationBlendTime="5" />
					<Animation
						AnimationName="GUSnprSP_AIFC"
						AnimationMode="ONCE"
						AnimationPriority="40"
						AnimationBlendTime="5" />
					<Script>
						Prev = CurDrawablePrevAnimationState()
						if Prev == "STATE_Prone" then
							CurDrawableSetTransitionAnimState("TRANS_IdleToSelected")
						end
					</Script>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_ToMovingFromProne">
					<Animation
						AnimationName="GUSnprSP_SGTA"
						AnimationMode="ONCE"
						AnimationBlendTime="10"
						AnimationSpeedFactorMin="1.6"
						AnimationSpeedFactorMax="1.6" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_ToProne">
					<Animation
						AnimationName="GUSnprSP_SKPA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_IdleToSelected">
					<Animation
						AnimationName="GUSnprSP_BATA"
						AnimationMode="ONCE"
						AnimationBlendTime="8"
						AnimationSpeedFactorMin="1.4"
						AnimationSpeedFactorMax="1.6" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_SelectedToProne">
					<Animation
						AnimationName="GUSnprSP_ABTA"
						AnimationMode="ONCE"
						AnimationBlendTime="15"
						AnimationSpeedFactorMin="1.4"
						AnimationSpeedFactorMax="1.6" />
				</AnimationState>
			</ScriptedModelDraw>
			<TracerModelDraw
				id="ModuleTag_TracerModelDraw"
				MinLength="100.0"
				MaxLength="100.0"
				Width="5.0"
				MinSpeed="35"
				MaxSpeed="35"
				SweepSpeed="0.0"
				SpreadAngle="0.0"
				MinTracersPerFrame="0.01"
				MaxTracersPerFrame="0.01"
				FrameLifeTime="35"
				WeaponSlotType="PRIMARY_WEAPON"
				Texture="FXTracerGDISniper"
				UseAdditiveBlending="true"
				TracerHitFx="FX_GDISniperBulletHit">
				<HeadColor
					r="1.0"
					g="1.0"
					b="1.0"
					a="1.0" />
				<TailColor
					r="0.0"
					g="0.0"
					b="0.0"
					a="0.0" />
				<ObjectStatusValidation
					ForbiddenStatus="WEAPON_UPGRADED_01" />
			</TracerModelDraw>
			<TracerModelDraw
				id="ModuleTag_TracerModelDrawVeterancy"
