<?xml version="1.0" encoding="utf-8"?>
<AssetDeclaration xmlns="uri:ea.com:eala:asset" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xi="http://www.w3.org/2001/XInclude">
	<Tags></Tags>
	<Includes>
	</Includes>
	<!-- PowerPlant -->
	<GameObject
		id="MG_Alien_LifeFormPlant"
		inheritFrom="BaseStructure"
		SelectPortrait="Portrait_LifeformRecyclingPlant"
		ButtonImage="Portrait_LifeformRecyclingPlant"
		Side="ALIEN"
		EditorSorting="STRUCTURE"
		Browser="REGION METAGAME ALIEN"
		BuildCost="100"
		BuildTime="1"
		PlacementViewAngle="315d"
		CommandSet="EmptyCommandSet"
		KindOf="STRUCTURE SELECTABLE IMMOBILE CAN_CAST_REFLECTIONS UNIQUE_UNIT AUTO_ACQUIRABLE_BY_AI NOT_AUTOACQUIRABLE COVER IGNORE_CAN_NOT_BUILD"
		RadarPriority="STRUCTURE"
		ProductionQueueType="MAIN_STRUCTURE"
		BuildPlacementTypeFlag="MAIN_STRUCTURE"
		EditorName="MG_Alien_LifeFormPlant"
		Description="Desc:MG_Alien_LifeFormPlant"
		TypeDescription="Type:MetaNODTemplePrime"
		CampnessValue="2000"
		CampnessValueRadius="300"
		UnitCategory="STRUCTURE">
		<DisplayName
			xai:joinAction="Replace" xmlns:xai="uri:ea.com:eala:asset:instance">NAME:MG_Alien_LifeFormPlant</DisplayName>
		<ArmorSet
			Armor="AlienPowerProjectorArmor"
			DamageFX="FactionStructureDamageFX" />
		<SkirmishAIInformation
			BaseBuildingLocation="HOMEBASE" />
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="ABLifRec" />
					<ParticleSysBone
						BoneName="FXBone01"
						FXParticleSystemTemplate="AlienPowerPlant"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="FXBone01"
						FXParticleSystemTemplate="AlienPowerPlantGlow"
						FollowBone="true" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="STRUCTURE_UNPACKING">
					<Model
						Name="ABLifRec" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="RUBBLE">
					<Model
						Name="ABLifRec_D3" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="REALLYDAMAGED">
					<Model
						Name="ABLifRec_D2" />
					<ParticleSysBone
						BoneName="FXBone01"
						FXParticleSystemTemplate="AlienPowerPlant"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="FXBone01"
						FXParticleSystemTemplate="AlienPowerPlantGlow"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="FXBone02"
						FXParticleSystemTemplate="AlienDamageFire01"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="FXBone02"
						FXParticleSystemTemplate="AlienDamageFireGlow01"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="FXBone02"
						FXParticleSystemTemplate="AlienDamageFireGlow02"
						FollowBone="true" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DAMAGED">
					<Model
						Name="ABLFRecycling" />
					<Texture
						Original="ABLFRecycling"
						New="ABLFRecycling_D" />
					<ParticleSysBone
						BoneName="FXBone01"
						FXParticleSystemTemplate="AlienPowerPlant"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="FXBone01"
						FXParticleSystemTemplate="AlienPowerPlantGlow"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="FXBone02"
						FXParticleSystemTemplate="AlienDamageFire01"
						FollowBone="true" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT"
					StateName="STATE_bored">
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="STRUCTURE_UNPACKING">
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="RUBBLE"
					StateName="STATE_Rubble"
					Flags="START_FRAME_LAST">
					<Animation
						AnimationName="ABLifRec_D3"
						AnimationMode="MANUAL" />
					<Script>
						Prev = CurDrawablePrevAnimationState();
						if Prev ~= "STATE_Rubble" and Prev ~= "TRANS_IntoRubble" then
						CurDrawableSetTransitionAnimState("TRANS_IntoRubble")
						end
					</Script>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="REALLYDAMAGED"
					StateName="STATE_ReallyDamaged"
					Flags="START_FRAME_LAST">
					<Animation
						AnimationName="ABLifRec_D2"
						AnimationMode="MANUAL" />
					<Script>
						Prev = CurDrawablePrevAnimationState();
						if Prev ~= "STATE_ReallyDamaged" and Prev ~= "TRANS_IntoReallyDamaged" then
						CurDrawableSetTransitionAnimState("TRANS_IntoReallyDamaged")
						end
					</Script>
				</AnimationState>

				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_IntoReallyDamaged">
					<Animation
						AnimationName="ABLifRec_D2"
						AnimationMode="ONCE"
						AnimationBlendTime="0" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_IntoRubble">
					<Animation
						AnimationName="ABLifRec_D3"
						AnimationMode="ONCE"
						AnimationBlendTime="0" />
				</AnimationState>
			</ScriptedModelDraw>

		</Draws>

		<Behaviors>
			<AttributeModifierPoolUpdate id="DefaultAttributeModifierPoolUpdate"/>
			<FireWeaponWhenDead
				id="ModuleTag_CatalystDeathWeapon"
				InitiallyActive="true"
				DeathWeapon="CatalystBuildingDeathWeapon"
				ContinueToBezierDestination="false">
				<DieMuxData DeathTypes="CATALYST" />
			</FireWeaponWhenDead>
			<TemporarilyDefectUpdate
				id="ModuleTag_TemporarilyDefect"
				DefectionFrameCount="100" />
			<FXListBehavior
				id="ModuleTag_FXList">
				<DieMuxData
					DeathTypes="ALL" />
				<Event
					Index="onTransitionToDamaged"
					FX="FX_AlienBuildingDamagedM" />
				<Event
					Index="onTransitionToReallyDamaged"
					FX="FX_AlienBuildingDamagedM" />
				<Event
					Index="onTransitionToRubble"
					FX="FX_AlienBuildingRubbleM" />
			</FXListBehavior>
			<SlowDeath
				id="ModuleTag_Death"
				SinkDelay="3.0s"
				SinkRate="4.0"
				DestructionDelay="8.0s">
				<Sound Type="INITIAL" List="ALI_Building_Die" />
				<DieMuxData
					DeathTypes="ALL" />
			</SlowDeath>
			<StructureUnpackUpdate
				id="StructureUnpackUpdate"
				UnpackTime="2.0s" />
			<RepairUpdate 
				id="ModuleTag_RepairUpdate">
				<PercentOfBuildCostToRebuildInfo></PercentOfBuildCostToRebuildInfo>
				<SelfAudio></SelfAudio>
			</RepairUpdate>
			<EngineerContain 
				id="ModuleTag_EngineerContain"
				NameOfVoiceToUseForFriendlyEnter="VoiceEngineerRepair"
				NameOfVoiceToUseForHostileEnter="VoiceCaptureBuilding" 
				EvaEventForRepair="BuildingRepaired"
				EvaEventForCapture="EnemyBuildingCaptured"
				FXForRepair="FX_Building_Repaired" 
				FXForCapture="FX_Building_Captured"
				FXForCaptureAndReplace="FX_Building_Captured"
				ImmediatelyEnabled="true">
				<CanEnterFilter Rule="NONE">
					<IncludeThing>GDIEngineer</IncludeThing>
					<IncludeThing>NODSaboteur</IncludeThing>
					<IncludeThing>AlienAssimilator</IncludeThing>
					<IncludeThing>SteelTalonsCombatEngineer</IncludeThing>
					<IncludeThing>ZOCOMEngineer</IncludeThing>
					<IncludeThing>BlackHandSaboteur</IncludeThing>
					<IncludeThing>MarkedOfKaneSaboteur</IncludeThing>
					<IncludeThing>Reaper17Assimilator</IncludeThing>
					<IncludeThing>Traveler59Assimilator</IncludeThing>
				</CanEnterFilter>
			</EngineerContain>
			<CreateObjectDie xmlns="uri:ea.com:eala:asset"
				id="ModuleTag_CreateOccupiedDie"
				CreationList="OCL_AdvancedAlienBuildingDestruction" >
				<DieMuxData
					DeathTypes="ALL"
					DeathTypesForbidden="DETONATED SUICIDED"/>
				<UpgradeForbidden>Upgrade_NoSpawnUponDestruction</UpgradeForbidden>
			</CreateObjectDie>
			<CreateObjectDie xmlns="uri:ea.com:eala:asset"
				id="ModuleTag_CreateOccupiedSuicide"
				CreationList="OCL_AdvancedAlienBuildingSuicide" >
				<DieMuxData DeathTypes="SUICIDED" />
			</CreateObjectDie>
      <!-- This needs to be in every Stategic Buildings XML
		            DO NOT CHANGE THE id. it must be the same in all files-->

		<MetaGameStratButtonInfo
				        id="ModuleTag_MetaGameStratButtonInfo"
				        MetaGameDescription="Desc:MG_Alien_LifeFormPlant"
				        MetaGameTypeDescription="Type:MetaAlienRiftGenerator"
				        >
				        <!-- you can list as many powers as you want here -->
				
						
					<Powers
						Image="Button_PlayerPowerAlienPlague"
						Title="NAME:PlayerPowerAlienPlague"
						TypeDescription="TYPE:PlayerPowerAlienPlague"
						Description="DESC:PlayerPowerAlienPlague" 
						MetaGameOp="SCRIN_POWER_ALIEN_PLAGUE"/>		

					<Powers
						Image="Button_PlayerPowerEradicate"
						Title="NAME:PlayerPowerEradicate"
						TypeDescription="TYPE:PlayerPowerEradicate"
						Description="DESC:PlayerPowerEradicate" 
						MetaGameOp="SCRIN_POWER_ERADICATE"/>		
		
						
      </MetaGameStratButtonInfo>	
		</Behaviors>
    <AI>
      <AIUpdate
				id="ModuleTag_AI" />
    </AI>
		<Body>
			<ActiveBody
				id="ModuleTag_Body"
				MaxHealth="4000.0" />
		</Body>
		<Geometry
			IsSmall="false">
			<Shape
				Type="CYLINDER"
				MajorRadius="41.5067"
				MinorRadius="41.5067"
				Height="9.5105">
				<Offset
					x="7.73712"
					y="-1.90735e-006"
					z="0.0" />
			</Shape>
			<Shape
				Type="CYLINDER"
				MajorRadius="19.0931"
				MinorRadius="19.0931"
				Height="38.605"
				ContactPointGeneration="INFANTRY">
				<Offset
					x="5.75443"
					y="-9.53674e-007"
					z="0.0" />
			</Shape>
		</Geometry>
		<AudioArrayVoice>
			<AudioEntry EvaEvent="BuildingStolen" AudioType="voiceDefectingAway" />
			<AudioEntry EvaEvent="EnemyBuildingCaptured" AudioType="voiceDefectingTowards" />
			<AudioEntry
				Sound="AudioEvent:ALI_Reactor_Select"
				AudioType="voiceSelect" />
		</AudioArrayVoice>
		<AudioArraySound>
			<AudioEntry Sound="AudioEvent:GDI_BuildingPlaced" AudioType="soundUnderConstruction" />
			<AudioEntry Sound="AudioEvent:ALI_Building_LightDamage" AudioType="soundOnDamaged" />
			<AudioEntry Sound="AudioEvent:ALI_Building_HeavyDamage" AudioType="soundOnReallyDamaged" />
			<AudioEntry Sound="AudioEvent:ALI_Building_Placed" AudioType="soundUnderConstruction" />
		</AudioArraySound>
		<EvaEvents
			EvaEventProductionStarted="BuildingConstructionStarted" 
			EvaEventProductionComplete="BuildingConstructionComplete" 
			EvaEventDamagedOwner="StructureUnderAttack" 	
			EvaEventSoldOwner="StructureSold"
			EvaEventRepairingOwner="StructureRepairing"
			EvaEnemyObjectSightedEvent="EnemyCampSighted"
			EvaEventAvailableForProduction="NewConstructionOptions"
			EvaEventPlacementFailed="StructurePlacementFailed" 
			EvaEventCannotBuildDueToFullBuildQueue="StructureCannotBuildDueToFullBuildQueue" 
			EvaEventBuildOnHold="BuildOnHold"
			EvaEventBuildCancelled="BuildCancelled" 
			EvaEventManuallyPoweredOff="BuildingManuallyPoweredDown"
			EvaEventManuallyPoweredOn="BuildingManuallyPoweredUp" />
		<ShadowInfo
			Type="VOLUME" />
		<VisionInfo
			VisionRange="100"
			ShroudClearingRange="100" />
		<ProjectedBuildabilityInfo
			Radius="175"
			BuildPlacementTypes="MAIN_STRUCTURE OTHER_STRUCTURE" />
	</GameObject>
</AssetDeclaration>
