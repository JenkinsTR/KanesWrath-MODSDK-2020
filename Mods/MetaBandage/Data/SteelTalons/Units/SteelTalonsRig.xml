				<Sound Sound="AudioEvent:GDI_Rig_Unpack2" Animation="GURigUPAK_AN" Frame="73" />
				<Sound Sound="AudioEvent:GDI_Rig_Unpack3" Animation="GURigUPAK_AN" Frame="97" />
			</AnimationSoundClientBehavior>
