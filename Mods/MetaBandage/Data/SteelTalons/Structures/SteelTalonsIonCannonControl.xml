<!-- Refer to GDI Ion Cannon Control -->
	<Tags></Tags>
	<Includes>
	</Includes>
	<GameObject
		id="SteelTalonsIonCannonControl"
		inheritFrom="GDIIonCannonControl"
		ButtonImage="Portrait_GDIIonCannon"
		SelectPortrait="Portrait_GDIIonCannon"
		Side="SteelTalons"
		EditorSorting="STRUCTURE"
		TransportSlotCount="1"
		BuildCost="5000"
		BuildTime="50"
		EnergyProduction="-20"
		CommandSet="GDIIonCannonControlCommandSet"
		KindOf="STRUCTURE SELECTABLE IMMOBILE CAN_CAST_REFLECTIONS POWERED REVEAL_TO_ALL UNIQUE_UNIT NOT_AUTOACQUIRABLE AUTO_ACQUIRABLE_BY_AI COVER SUPER_WEAPON"
		RadarPriority="STRUCTURE"
		PlacementViewAngle="225d"
		ProductionQueueType="OTHER_STRUCTURE"
		BuildPlacementTypeFlag="OTHER_STRUCTURE"
		EditorName="SteelTalonsIonCannonControl"
		Description="Desc:GDIIonCannon"
		TypeDescription="Type:GDIIonCannon"
		MaxSimultaneousOfType="1"
		CampnessValue="2000"
		CampnessValueRadius="300"
		UnitCategory="STRUCTURE">
		<DisplayName
			xai:joinAction="Replace" xmlns:xai="uri:ea.com:eala:asset:instance">Name:GDIIonCannon</DisplayName>
		<GameDependency>
			<RequiredObject>SteelTalonsTechCenter</RequiredObject>
		</GameDependency>
		<ArmorSet
			Armor="GDIIonCannonControlArmor" />
		<ArmorSet
			Conditions="PLAYER_UPGRADE"
			Armor="GDIIonCannonControlSonicRepulsionFieldArmor"
			DamageFX="NormalDamageFX" />
		<SkirmishAIInformation
			BaseBuildingLocation="HOMEBASE" />
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="GBIonCan" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="STRUCTURE_UNPACKING">
					<Model
						Name="GBIonCan_A" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="RUBBLE">
					<Model
						Name="GBIonCan_D3SN" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="REALLYDAMAGED">
					<Model
						Name="GBIonCan_D2SN" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DAMAGED">
					<Model
						Name="GBIonCan" />
					<Texture
						Original="GBIonCannon"
						New="GBIonCannonD" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT"></AnimationState>
				<!-- BUILDUP ANIMATION -->
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="STRUCTURE_UNPACKING">
					<Animation
						AnimationName="GBIonCan_A"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="RUBBLE"
					StateName="STATE_Rubble"
					Flags="START_FRAME_LAST">
					<Animation
						AnimationName="GBIonCan_D3AN"
						AnimationMode="MANUAL" />
					<Script>
						Prev = CurDrawablePrevAnimationState();
						if Prev ~= "STATE_Rubble" and Prev ~= "TRANS_IntoRubble" then
						CurDrawableSetTransitionAnimState("TRANS_IntoRubble")
						end
					</Script>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="REALLYDAMAGED"
					StateName="STATE_ReallyDamaged"
					Flags="START_FRAME_LAST">
					<Animation
						AnimationName="GBIonCan_D2AN"
						AnimationMode="MANUAL" />
					<Script>
						Prev = CurDrawablePrevAnimationState();
						if Prev ~= "STATE_ReallyDamaged" and Prev ~= "TRANS_IntoReallyDamaged" then
						CurDrawableSetTransitionAnimState("TRANS_IntoReallyDamaged")
						end
					</Script>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_IntoReallyDamaged">
					<Animation
						AnimationName="GBIonCan_D2AN"
						AnimationMode="ONCE"
						AnimationBlendTime="0" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_IntoRubble">
					<Animation
						AnimationName="GBIonCan_D3AN"
						AnimationMode="ONCE"
						AnimationBlendTime="0" />
					<ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="Des_Medium"
						FollowBone="false" />
				</AnimationState>
				
			</ScriptedModelDraw>
			<!-- DRAW CANNON -->
			<ScriptedModelDraw
				id="ModuleTag_Draw_Cannon"
				OkToChangeModelColor="true">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="GBIonCanX_SKN" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="STRUCTURE_UNPACKING">
					<Model
						Name="GBIonCanX_A" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DAMAGED">
					<Model
						Name="GBIonCanXD_SKN" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="REALLYDAMAGED">
					<Model
						Name="GBIonCanXD_SKN" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DYING">
					<Model
						Name="GBIonCanXD_SKN" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT"
					StateName="STATE_Idle">
					<Animation
						AnimationName="GBIonCanX_IDL"
						AnimationMode="LOOP" />
					<Script>
						Prev = CurDrawablePrevAnimationState();
						if Prev == "STATE_Packing" then
						CurDrawableSetTransitionAnimState("TRANS_IntoIdle")
						end
					</Script>
				</AnimationState>
				<!-- BUILDUP ANIMATION -->
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="STRUCTURE_UNPACKING"
					StateName="STATE_Structure_Unpacking">
					<Animation
						AnimationName="GBIonCanX_A"
						AnimationMode="ONCE" />
					<ParticleSysBone
						BoneName="NONE"
						FXParticleSystemTemplate="Con_Medium"
						FollowBone="true" />
				</AnimationState>
				<!--<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="UNPACKING"
					StateName="STATE_Unpacking">
					<Animation
						AnimationName="GBIonCanX_ATKA"
						AnimationMode="ONCE"
						AnimationBlendTime="0" />
				</AnimationState>-->
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="SPECIALPOWER1_READY"
					StateName="STATE_Ready">
					<Animation
						AnimationName="GBIonCanX_RDY"
						AnimationMode="ONCE"	
						AnimationBlendTime="0" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="PACKING"
					StateName="STATE_Packing">
					<Animation
						AnimationName="GBIonCanX_ATKA"
						AnimationMode="ONCE"
						AnimationBlendTime="0" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_IntoIdle">
					<Animation
						AnimationName="GBIonCanX_CLS"
						AnimationMode="ONCE"
						AnimationBlendTime="0" />
				</AnimationState>
			</ScriptedModelDraw>
			
			<!-- Draw sonic repulsion field -->
			
			<ScriptedModelDraw
				id="ModuleTag_DrawGDIWarfactorySRF"
				OkToChangeModelColor="true"
				UseStandardModelNames="true"
				StaticModelLODMode="true">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT" >
					<Model
						Name="" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="USER_6 DYING">
					<Model
						Name="" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="USER_6 REALLYDAMAGED">
					<Model
						Name="" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="USER_6 DAMAGED">
					<Model
						Name="" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="USER_6">
					<Model
						Name="GBIonCanSRF_SKN" />
				</ModelConditionState>
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<AttributeModifierPoolUpdate id="DefaultAttributeModifierPoolUpdate"/>
			<FireWeaponWhenDead
				id="ModuleTag_CatalystDeathWeapon"
				InitiallyActive="true"
				DeathWeapon="CatalystBuildingDeathWeapon"
				ContinueToBezierDestination="false">
				<DieMuxData DeathTypes="CATALYST" />
			</FireWeaponWhenDead>
			<TemporarilyDefectUpdate
				id="ModuleTag_TemporarilyDefect"
				DefectionFrameCount="100" />
			<ModelConditionUpgrade
				id="ModuleTag_UpgradeSonicRepulsion"
				AddConditionFlags="USER_6">
				<TriggeredBy>Upgrade_SonicRepulsionField</TriggeredBy>
			</ModelConditionUpgrade>
			
			<BuildingBehavior
				id="ModuleTag_BuildingBehavior"
				NightWindowObject="LIGHT_01" />
		
			<SlowDeath
				id="ModuleTag_Death"
				SinkDelay="3s"
				SinkRate="6.0"
				DestructionDelay="9.0s">
				<Sound Type="INITIAL" List="HumanFaction_MediumBuilding_DieMS" />
				<DieMuxData
					DeathTypes="ALL" />
			</SlowDeath>
			<FXListBehavior
				id="ModuleTag_FXList">
				<DieMuxData
					DeathTypes="ALL" />
