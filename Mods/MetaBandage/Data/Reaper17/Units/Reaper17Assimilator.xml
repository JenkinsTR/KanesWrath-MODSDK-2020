	<GameObject
		id="Reaper17Assimilator"
		inheritFrom="AlienAssimilator"
		SelectPortrait="Portrait_ALIENAssimilator"
		ButtonImage="Portrait_ALIENAssimilator"
		Side="Reaper17"
		EditorSorting="UNIT"
		TransportSlotCount="1"
		BuildCost="500"
		BuildTime="5"
		CommandSet="AlienAssimilatorCommandSet"
		IsTrainable="true"
		KindOf="PRELOAD SELECTABLE ATTACK_NEEDS_LINE_OF_SIGHT CAN_CAST_REFLECTIONS INFANTRY SCORE CAN_CAPTURE PATH_THROUGH_INFANTRY STEALTH_GARRISON HEALED_BY_TIBERIUM SKIRMISH_AI_DONT_GARRISON ENGINEER CAN_CAPTURE CAN_BE_FAVORITE_UNIT IGNORES_SELECT_ALL"
		RadarPriority="UNIT"
		BuildCompletion="APPEARS_AT_RALLY_POINT"
		UnitCategory="INFANTRY"
		ProductionQueueType="INFANTRY"
		VoicePriority="60"
		EditorName="Reaper17Assimilator"
		Description="Desc:AlienAssimilator"
		TypeDescription="Type:AlienAssimilator"
		UnitTypeIcon="EngineerIcon"
		CaptureTime="3s">
		<DisplayName
			xai:joinAction="Replace" xmlns:xai="uri:ea.com:eala:asset:instance">NAME:ALIENAssimilator</DisplayName>
		<ArmorSet
			Armor="AlienAssimilatorArmor"
			DamageFX="InfantryDamageFX" />
		<LocomotorSet
			Locomotor="HumanLocomotor"
			Condition="NORMAL"
			Speed="36" />
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="AUAsmlator_SKN" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FORMATION_PREVIEW">
					<Model
						Name="FXEngineer_FP" />
				</ModelConditionState>
				<ModelConditionState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="INSIDE_GARRISON">
					<Model
						Name="" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FORMATION_PREVIEW">
					<!-- no anim -->
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT"
					StateName="STATE_bored"
					Flags="RESTART_ANIM_WHEN_COMPLETE">
					<Animation
						AnimationName="AUAsmlator_BIDA"
						AnimationMode="ONCE"
						AnimationSpeedFactorMin="0.9"
						AnimationSpeedFactorMax="1.1"
						AnimationPriority="30" />
					<Animation
						AnimationName="AUAsmlator_BIFA"
						AnimationMode="ONCE"
						AnimationSpeedFactorMin="0.9"
						AnimationSpeedFactorMax="1.1"
						AnimationPriority="5" />
					<Script>
						Prev = CurDrawablePrevAnimationState();
						if Prev == "STATE_Selected" or Prev == "ATNB" or Prev == "STATE_Run" then CurDrawableSetTransitionAnimState("TRANS_SelectedToIdle") end;
					</Script>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FRONTCRUSHED">
					<Animation
						AnimationName="AUAsmlator_CDTA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="BACKCRUSHED">
					<Animation
						AnimationName="AUAsmlator_CDTA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DYING">
					<Animation
						AnimationName="AUAsmlator_DIEA"
						AnimationMode="ONCE" />
					<Animation
						AnimationName="AUAsmlator_DIEB"
						AnimationMode="ONCE" />
				</AnimationState>
				<!--Capturing-->
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="CAPTURING">
					<Animation
						AnimNickName="ATNB"
						AnimationName="AUAsmlator_AIDA"
						AnimationMode="LOOP"
						AnimationBlendTime="5"
						AnimationSpeedFactorMin="0.9"
						AnimationSpeedFactorMax="1.1"
						AnimationMustCompleteBlend="true" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING FIRING_OR_PREATTACK_A"
					StateName="STATE_Run"
					Flags="RANDOMSTART">
					<Animation
						AnimationName="AUAsmlator_RUNA"
						AnimationMode="LOOP"
						Distance="20" />
				</AnimationState>
				<!--				
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="FIRING_OR_PREATTACK_A"
					FrameForPristineBonePositions="5">
					<Animation
						AnimationName="AUAsmlator_ATKA"
						AnimationMode="ONCE"
						UseWeaponTiming="true" />
				</AnimationState>
-->
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING"
					StateName="STATE_Run"
					Flags="RANDOMSTART">
					<Animation
						AnimationName="AUAsmlator_RUNC"
						AnimationMode="LOOP"
						Distance="20"
						AnimationSpeedFactorMin="0.5"
						AnimationSpeedFactorMax="0.7"
						AnimationPriority="30" />
					<Animation
						AnimationName="AUAsmlator_RUNA"
						AnimationMode="LOOP"
						Distance="20"
						AnimationSpeedFactorMin="0.5"
						AnimationSpeedFactorMax="0.7"
						AnimationPriority="10" />
					<Animation
						AnimationName="AUAsmlator_RUNB"
						AnimationMode="LOOP"
						Distance="20"
						AnimationSpeedFactorMin="0.5"
						AnimationSpeedFactorMax="0.7"
						AnimationPriority="30" />
					<Animation
						AnimationName="AUAsmlator_RUND"
						AnimationMode="LOOP"
						Distance="20"
						AnimationSpeedFactorMin="0.5"
						AnimationSpeedFactorMax="0.7"
						AnimationPriority="30" />
				</AnimationState>
				<!-- SELECTED -->
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="SELECTED"
					StateName="STATE_Selected">
					<Animation
						AnimNickName="ATNB"
						AnimationName="AUAsmlator_AIDA"
						AnimationMode="LOOP"
						AnimationBlendTime="5"
						AnimationSpeedFactorMin="0.9"
						AnimationSpeedFactorMax="1.1"
						AnimationMustCompleteBlend="true" />
					<Script>
						Prev = CurDrawablePrevAnimationState();
							if Prev == "STATE_bored" then CurDrawableSetTransitionAnimState("TRANS_boredToAttention") end;
					</Script>
				</AnimationState>
				<!-- TRANSITIONS -->
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_boredToAttention">
					<Animation
						AnimationName="AUAsmlator_BATA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_attentionToBored">
					<Animation
						AnimationName="AUAsmlator_ABTA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_IdleToSelected">
					<Animation
						AnimationName="AUAsmlator_BATA"
						AnimationMode="ONCE" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_TRANSITION"
					StateName="TRANS_SelectedToIdle">
					<Animation
						AnimationName="AUAsmlator_ABTA"
						AnimationMode="ONCE" />
				</AnimationState>
			</ScriptedModelDraw>
		<!-- DRAW SPEED TRAILS FOR ADV ARTICULATORS -->	
			<ScriptedModelDraw		
				id="ModuleTag_DrawSpeedBoostFX_LT3"
				AttachToBoneInAnotherModule="B_LEG02">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="FXInvisBone" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT"/>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="USER_3 MOVING">
					<ParticleSysBone
						BoneName="INVISBONE01"
						FXParticleSystemTemplate="AlienSpeedTrails"
						FollowBone="true" />
				</AnimationState>
			</ScriptedModelDraw>
			<ScriptedModelDraw		
				id="ModuleTag_DrawSpeedBoostFX_RT3"
				AttachToBoneInAnotherModule="B_LEG16">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="FXInvisBone" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT"/>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="USER_3 MOVING">
					<ParticleSysBone
						BoneName="INVISBONE01"
						FXParticleSystemTemplate="AlienSpeedTrails"
						FollowBone="true" />
				</AnimationState>
			</ScriptedModelDraw>			
		</Draws>
		<Behaviors>
			<AttributeModifierPoolUpdate 
