<?xml version="1.0" encoding="utf-8"?>
<AssetDeclaration xmlns="uri:ea.com:eala:asset">
<!--Leash Range now set to 100 (Refer to Patch 1.02 Notes)-->
<!--Speed increase so drone can keep up with MRT when transport via Ox-->
<!--Can no longer repair Structures, Air Units and Infantry-->
	<GameObject
		id="ZOCOMAPCRepairDrone"
		Side="GDI"
		EditorSorting="MISC_MAN_MADE"
		OcclusionDelay="0"
		ShockwaveResistance="120.0"
		KindOf="AIRCRAFT NO_COLLIDE NOT_AUTOACQUIRABLE"
		EditorName="ZOCOMAPCRepairDrone"
		Description="Desc:GDIRepairDrone"
		VoicePriority="5">	
		<DisplayName>NAME:RepairDrone</DisplayName>
		<ArmorSet
			Armor="NoArmor" />
		<LocomotorSet
			Locomotor="GDIRepairDroneLocomotor"
			Condition="NORMAL"
			Speed="175.0" />
		<Draws>
			<ScriptedModelDraw
				id="ModuleTag_Draw"
				OkToChangeModelColor="true">
				<ModelConditionState
					ParseCondStateType="PARSE_DEFAULT">
					<Model
						Name="GURprDrn_SKN" />
				</ModelConditionState>
				<AnimationState
					ParseCondStateType="PARSE_DEFAULT"
					Flags="RESTART_ANIM_WHEN_COMPLETE"
					AllowRepeatInRandomPick="true"
					StateName="STATE_bored">
					<Animation
						AnimationName="GURprDrn_IDLA"
						AnimationMode="ONCE" />
				</AnimationState>
				<!-- placeholder until we get some real art -->
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DYING"
					Flags="RANDOMSTART">
					<Animation
						AnimationName="GURprDrn_RPRA"
						AnimationMode="LOOP"/>
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="ATTACHED"
					Flags="RANDOMSTART">
					<Animation
						AnimationName="GURprDrn_RPRA"
						AnimationMode="LOOP"/>
					<ParticleSysBone
						BoneName="B_Drone03"
						FXParticleSystemTemplate="GDIRepairDroneFlash"
						FollowBone="true" />
					<ParticleSysBone
						BoneName="B_Drone03"
						FXParticleSystemTemplate="GDIRepairDroneSparks"
						FollowBone="true" />						
				</AnimationState>		
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="ACCELERATE MOVING"
					Flags="RANDOMSTART">
					<Animation
						AnimationName="GURprDrn_ACCL"
						AnimationMode="ONCE"
						Distance="30" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="DECELERATE MOVING"
					Flags="RANDOMSTART">
					<Animation
						AnimationName="GURprDrn_DECL"
						AnimationMode="ONCE"
						Distance="30" />
				</AnimationState>
				<AnimationState
					ParseCondStateType="PARSE_NORMAL"
					ConditionsYes="MOVING"
					Flags="RANDOMSTART">
					<Animation
						AnimationName="GURprDrn_MOVA"
						AnimationMode="LOOP"
						AnimationPriority="30"
						Distance="30" />
				</AnimationState>					
			</ScriptedModelDraw>
		</Draws>
		<Behaviors>
			<SlavedUpdate
				id="ModuleTag_SlavedUpdate"
				LeashRange="100"
				GuardMaxRange="100"
				GuardWanderRange="50"
				AttackRange="0"
				UseSlaverAsControlForEvaObjectSightedEvents="false" />
			<PassiveAreaEffectBehavior
				id="ModuleTag_PassiveAreaEffect"
				EffectRadius="0"
				HealingPointsPerSecond="100"
				AffectAttached="true"
				AffectUnderAttack="true"
				NonStackable="false"
				HealFX="FX_Repair" >
				<AllowFilter
					Rule="ANY"
					Include="VEHICLE HUGE_VEHICLE"
					Exclude="AIRCRAFT" 
					Relationship="ALLIES" />
			</PassiveAreaEffectBehavior>
			<SlowDeath
				id="ModuleTag_Death"
				DestructionDelay="3s"
				Fade="true"
				FadeTime="3s">
				<DieMuxData
					DeathTypes="ALL" />
			</SlowDeath>
			<AttachUpdate
				id="ModuleTag_Attach"
				Range="100"
				CloseEnoughRange="20.0"
				Teleport="false"
				UseGeometry="true"
				DetachWhenParentHealed="true" 
				RequireFullyHealedToDetach="true"
				ScanForNewParentWhenDetached="true"
				DetachWhenParentOutOfSlavedRange="true"
				InitialAttachDelay="4.0s"
				ParentStatus="UNDERGOING_REPAIR"
				Flags="FIND_BEST_PARENT UNCONTAINED_ONLY SAME_PLAYER_ONLY ONE_ATTACH_PER_PARENT" >
				<ObjectFilter
					Rule="ANY"
					Include="VEHICLE HUGE_VEHICLE"
					Exclude="AIRCRAFT" 
					Relationship="ALLIES" />
			</AttachUpdate>
			<Physics
				id="ModuleTag_Physics" />
		</Behaviors>
		<AI>
			<JetAIUpdate
				id="ModuleTag_JetAIUpdate"
				AutoAcquireEnemiesWhenIdle="NO"
				NeedsRunway="false"
				KeepsParkingSpaceWhenAirborne="false"
				MinHeight="5"
				CirclesForAttack="true"
				>
				<LockonInfo />
			</JetAIUpdate>
		</AI>
		<Body>
			<ActiveBody
				id="ModuleTag_Body"
				MaxHealth="200.0"/>
		</Body>
		<Geometry
			IsSmall="true">
			<Shape
				Type="CYLINDER"
				MajorRadius="5.0"
				Height="5.0"></Shape>
		</Geometry>
		<ClientBehaviors>
			<ModelConditionAudioLoopClientBehavior id="ModuleTag_GDI_RepairDrone_sparks_delayedLoop">
				<ModelConditionSound Sound="AudioEvent:GDI_RepairDrone_sparks_delayedLoop" RequiredFlags="ATTACHED" ExcludedFlags="DYING" />
			</ModelConditionAudioLoopClientBehavior>
		</ClientBehaviors>
		<VisionInfo
			VisionRange="150"
			ShroudClearingRange="20" />
	</GameObject>
</AssetDeclaration>